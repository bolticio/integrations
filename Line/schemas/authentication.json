{
    "api_key": {
        "validate": {
            "url": "https://api.line.me/v2/bot/info",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.api_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.data.message}}",
                    "message": "{{response.data}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "API key is required field"
                        }
                    },
                    "description": "Your Line channel access token. Navigate to the <a href='https://developers.line.biz/console' target='_blank'> Developers line account </a> for more details.",
                    "displayName": "API Key",
                    "displayType": "password",
                    "placeholder": "Enter API Key",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_token"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": "api_key",
                "options": [
                    {
                        "label": "API Key",
                        "value": "api_key"
                    }
                ],
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "hidden",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
