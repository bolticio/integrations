{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The LINE user ID to retrieve profile information for.",
                "displayName": "User ID",
                "displayType": "text",
                "placeholder": "Enter LINE user ID",
                "requiredDetail": {
                    "errorMsg": "Location title is required."
                }
            },
            "name": "userId"
        }
    ],
    "definition": {
        "url": "https://api.line.me/v2/bot/profile/{{parameters.userId}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.api_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
