{
    "api_token": {
        "validate": {
            "url": "https://{{secrets.api_url}}/whoAmI/api/json",
            "method": "get",
            "headers": {
                "Authorization": "Basic convertBufferBase64String({{secrets.username}}:{{secrets.password}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "Input details are not valid"
                },
                "output": "{{response.data.authenticated}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Jenkins Domain is required"
                        }
                    },
                    "description": "Add your domain name like jenkins.boltic.de",
                    "displayName": "Jenkins Domain",
                    "displayType": "text",
                    "placeholder": "jenkins.domain",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_url"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Username is required"
                        }
                    },
                    "displayName": "Username",
                    "displayType": "text",
                    "placeholder": "username",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "username"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "API Token is required"
                        }
                    },
                    "displayName": "API Token",
                    "displayType": "password",
                    "placeholder": "BDsTn15vHezBlt_XGp3Tig",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "password"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": "api_token",
                "options": [
                    {
                        "label": "API Token",
                        "value": "api_token"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
