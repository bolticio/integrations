{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the name of the jenkins job you want to build.",
                "displayName": "Job Name",
                "displayType": "text",
                "placeholder": "Enter the job name"
            },
            "name": "jobName"
        }
    ],
    "definition": {
        "url": "https://{{secrets.api_url}}/job/{{parameters.jobName}}/build",
        "body": {},
        "method": "post",
        "headers": {
            "Authorization": "Basic convertBufferBase64String({{secrets.username}}:{{secrets.password}})"
        },
        "response": {
            "error": {
                "code": "{{response.status}}"
            },
            "output": "{{response.status}}"
        }
    }
}
