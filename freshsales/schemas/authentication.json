{
    "api_key": {
        "validate": {
            "url": "{{secrets.api_url}}/api/settings/sales_accounts/fields",
            "method": "get",
            "headers": {
                "Authorization": "Token token={{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "options": [
                        {
                            "label": "{{domain}}.myfreshworks.com/crm/sales",
                            "value": "https://{{secrets.domain}}.myfreshworks.com/crm/sales"
                        },
                        {
                            "label": "{{domain}}.freshsales.io",
                            "value": "https://{{secrets.domain}}.freshsales.io"
                        },
                        {
                            "label": "{{domain}}.freshworks.com/crm/sales",
                            "value": "https://{{secrets.domain}}.freshworks.com/crm/sales"
                        }
                    ],
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "API URL is required"
                        }
                    },
                    "description": "Choose an API URL endpoint.",
                    "displayName": "API URL",
                    "displayType": "select",
                    "placeholder": "Select an API URL",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_url"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Domain is required"
                        }
                    },
                    "description": "The domain in the Freshworks CRM org URL. For example, in <a href='https://boltic.myfreshworks.com' target='_blank'>https://boltic.myfreshworks.com</a>, the domain is boltic.",
                    "displayName": "Domain",
                    "displayType": "text",
                    "placeholder": "Enter Domain",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "domain"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "API key is required"
                        }
                    },
                    "description": "Refer to the <a href='https://developer.freshsales.io/api/#authentication' target='blank'>Freshsales API authenticaton documentation</a> for detailed instructions on getting your API key.",
                    "displayName": "API Key",
                    "displayType": "password",
                    "placeholder": "Enter API Key",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_key"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": "api_key",
                "options": [
                    {
                        "label": "API Key",
                        "value": "api_key"
                    }
                ],
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Authentication type is required"
                    }
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
