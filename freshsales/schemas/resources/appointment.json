{
    "getUsers": {
        "definition": {
            "qs": {},
            "url": "{{secrets.api_url}}/api/selector/owners",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Token token={{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.data.errors.code}}",
                    "message": "{{response.data.errors.message}}"
                },
                "output": "{{response.data.users}}"
            }
        }
    },
    "getOutcome": {
        "definition": {
            "qs": {},
            "url": "{{secrets.api_url}}/api/selector/sales_activity_outcomes",
            "method": "get",
            "headers": {
                "Authorization": "Token token={{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.data.errors.code}}",
                    "message": "{{response.data.errors.message}}"
                },
                "output": "{{response.data.sales_activity_outcomes}}"
            },
            "transform": {
                "output": "return [...new Map(output.map(item => [item.position, item])).values()];"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "value": "open",
                "options": [
                    {
                        "label": "Completed",
                        "value": "completed"
                    },
                    {
                        "label": "Due Today",
                        "value": "due_today"
                    },
                    {
                        "label": "Due Tomorrow",
                        "value": "due_tomorrow"
                    },
                    {
                        "label": "Open",
                        "value": "open"
                    },
                    {
                        "label": "Overdue",
                        "value": "overdue"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Filter criteria for listing appointments.",
                "displayName": "Filter",
                "displayType": "select"
            },
            "name": "filter"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Appointment Attendees",
                        "value": "appointment_attendees"
                    },
                    {
                        "label": "Target",
                        "value": "targetable"
                    },
                    {
                        "label": "Users",
                        "value": "users"
                    }
                ],
                "validation": {
                    "required": false
                },
                "description": "Data to include in the response.",
                "displayName": "Include",
                "displayType": "select"
            },
            "name": "include"
        }
    ],
    "definition": {
        "qs": {
            "filter": "{{parameters.filter}}",
            "include": "{{parameters.include}}"
        },
        "url": "{{secrets.api_url}}/api/appointments",
        "method": "get",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Token token={{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.data.errors.code}}",
                "message": "{{response.data.errors.message}}"
            },
            "output": "{{response.data.appointments}}"
        },
        "pagination": {
            "qs": {
                "page": "{{pagination.page}} + 1"
            },
            "type": "page",
            "default": {
                "page": 1
            },
            "condition": "{{response.data.meta.total_pages}} >= {{pagination.page}}"
        }
    }
}
