{
    "getTypes": {
        "definition": {
            "qs": {},
            "url": "{{secrets.api_url}}/api/selector/sales_activity_types",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Token token={{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.data.errors.code}}",
                    "message": "{{response.data.errors.message}}"
                },
                "output": "{{response.data.sales_activity_types}}"
            }
        }
    },
    "getUsers": {
        "definition": {
            "qs": {},
            "url": "{{secrets.api_url}}/api/selector/owners",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Token token={{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.data.errors.code}}",
                    "message": "{{response.data.errors.message}}"
                },
                "output": "{{response.data.users}}"
            }
        }
    },
    "getOutcome": {
        "definition": {
            "qs": {},
            "url": "{{secrets.api_url}}/api/selector/sales_activity_outcomes",
            "method": "get",
            "headers": {
                "Authorization": "Token token={{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.data.errors.code}}",
                    "message": "{{response.data.errors.message}}"
                },
                "output": "{{response.data.sales_activity_outcomes}}"
            },
            "transform": {
                "output": "return [...new Map(output.map(item => [item.position, item])).values()];"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "ID of the task you want to update.",
                "displayName": "Task ID",
                "displayType": "number",
                "placeholder": "Enter the Task ID"
            },
            "name": "task_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The title of the task.",
                "displayName": "Title",
                "displayType": "text",
                "placeholder": "Enter the task title"
            },
            "name": "title"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "A brief description of the task.",
                "displayName": "Description",
                "displayType": "text",
                "placeholder": "Enter the task description"
            },
            "name": "description"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The due date for the task.",
                "displayName": "Due Date",
                "displayType": "text",
                "placeholder": "Enter the due date"
            },
            "name": "due_date"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "freshsales",
                        "secret": "{{parameters.secret}}",
                        "resource": "task",
                        "operation": "task.update",
                        "loadOptionsMethod": "getUsers"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "display_name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "ID of the task owner.",
                "displayName": "Owner ID",
                "displayType": "select",
                "placeholder": "Enter the owner ID"
            },
            "name": "owner_id"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Open",
                        "value": "Open"
                    },
                    {
                        "label": "Completed",
                        "value": "Completed"
                    }
                ],
                "validation": {
                    "required": false
                },
                "description": "Status of the task.",
                "displayName": "Status",
                "displayType": "select",
                "placeholder": "Choose status from the dropdown"
            },
            "name": "status"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Contact",
                        "value": "Contact"
                    },
                    {
                        "label": "Deal",
                        "value": "Deal"
                    },
                    {
                        "label": "Lead",
                        "value": "Lead"
                    },
                    {
                        "label": "SalesAccount",
                        "value": "SalesAccount"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Type of the entity for which the task is updated.",
                "displayName": "Target Type",
                "displayType": "select"
            },
            "name": "targetable_type"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "ID of the targetable entity.",
                "displayName": "Target ID",
                "displayType": "number",
                "placeholder": "Enter the targetable ID",
                "dependencies": {
                    "conditions": [
                        {
                            "field": "targetable_type",
                            "operator": "NOT_EMPTY"
                        }
                    ]
                }
            },
            "name": "targetable_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "freshsales",
                        "secret": "{{parameters.secret}}",
                        "resource": "task",
                        "operation": "task.update",
                        "loadOptionsMethod": "getUsers"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "display_name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": false
                },
                "description": "ID of the creater associated with the task.",
                "displayName": "Creater ID",
                "displayType": "select",
                "placeholder": "Enter the creater ID"
            },
            "name": "creater_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "freshsales",
                        "secret": "{{parameters.secret}}",
                        "resource": "task",
                        "operation": "task.create",
                        "loadOptionsMethod": "getOutcome"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": false
                },
                "description": "ID of the outcome associated with the task.",
                "displayName": "Outcome ID",
                "displayType": "select",
                "placeholder": "Enter the outcome ID"
            },
            "name": "outcome_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "freshsales",
                        "secret": "{{parameters.secret}}",
                        "resource": "task",
                        "operation": "task.update",
                        "loadOptionsMethod": "getTypes"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": false
                },
                "description": "ID of the task type associated with the task.",
                "displayName": "Task Type ID",
                "displayType": "select",
                "placeholder": "Enter the task type ID"
            },
            "name": "task_type_id"
        }
    ],
    "definition": {
        "url": "{{secrets.api_url}}/api/tasks/{{parameters.task_id}}",
        "body": {
            "task": {
                "title": "{{parameters.title}}",
                "status": "{{parameters.status}}",
                "due_date": "{{parameters.due_date}}",
                "owner_id": "{{parameters.owner_id}}",
                "creater_id": "{{parameters.creater_id}}",
                "outcome_id": "{{parameters.outcome_id}}",
                "description": "{{parameters.description}}",
                "task_type_id": "{{parameters.task_type_id}}",
                "targetable_id": "{{parameters.targetable_id}}",
                "targetable_type": "{{parameters.targetable_type}}"
            }
        },
        "method": "put",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Token token={{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.data.errors.code}}",
                "message": "{{response.data.errors.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
