{
    "parameters": [
        {
            "meta": {
                "value": "access_token",
                "options": [
                    {
                        "label": "Access Token",
                        "value": "access_token"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ],
    "access_token": {
        "validate": {
            "url": "https://api.fynd.com/service/application/configuration/v1.0/languages",
            "method": "get",
            "headers": {
                "Authorization": "Bearer convertBufferBase64String({{secrets.api_key}}:{{secrets.api_secret}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Application ID is required"
                        }
                    },
                    "description": "",
                    "displayName": "Application ID",
                    "displayType": "text",
                    "placeholder": "Enter Application ID"
                },
                "name": "api_key"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Application Token is required"
                        }
                    },
                    "description": "",
                    "displayName": "Application Token",
                    "displayType": "password",
                    "placeholder": "Enter Application Token"
                },
                "name": "api_secret"
            }
        ]
    }
}
