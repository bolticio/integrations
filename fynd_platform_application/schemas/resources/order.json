{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "ID of the shipment. An order may contain multiple items and may get divided into one or more shipment, each having its own ID.",
                "displayName": "shipment_id",
                "displayType": "text"
            },
            "name": "shipment_id"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "True",
                        "value": "true"
                    },
                    {
                        "label": "False",
                        "value": "false"
                    }
                ],
                "validation": {},
                "description": "Flag to allow inactive shipments",
                "displayName": "allow_inactive",
                "displayType": "select"
            },
            "name": "allow_inactive"
        }
    ],
    "definition": {
        "qs": {
            "allow_inactive": "{{parameters.allow_inactive}}"
        },
        "url": "https://api.fynd.com/service/application/order/v1.0/orders/shipments/{{parameters.shipment_id}}",
        "body": {},
        "method": "get",
        "headers": {
            "Authorization": "Bearer convertBufferBase64String({{secrets.api_key}}:{{secrets.api_secret}})"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": ""
            },
            "output": "{{response.data}}"
        }
    }
}
