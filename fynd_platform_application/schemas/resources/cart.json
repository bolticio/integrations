            "meta": {
                "options": [
                    {
                        "label": "Retrieve cart details (getCart)",
                        "value": "cart.getCart",
                        "description": "Get the current state of the user's shopping cart including items, quantities, prices, and applied discounts."
                    },
                    {
                        "label": "Add to cart (addItems)",
                        "value": "cart.addItems",
                        "description": "Add one or more items to the user's shopping cart with specified quantities and variants."
                    },
                    {
                        "label": "Update cart (updateCart)",
                        "value": "cart.updateCart",
                        "description": "Modify existing items in the cart including quantity adjustments, variant changes, or removing items."
                    },
                    {
                        "label": "Get saved addresses (getAddresses)",
                        "value": "cart.getAddresses",
                        "description": "Retrieve the list of delivery addresses saved in the user's profile for shipping selection."
                    },
                    {
                        "label": "Add new address (addAddress)",
                        "value": "cart.addAddress",
                        "description": "Save a new delivery address to the user's profile for current and future orders."
                    },
                    {
                        "label": "Choose delivery address (selectAddress)",
                        "value": "cart.electAddress",
                        "description": "Set the delivery address for the current cart from the user's saved addresses."
                    },
                    {
                        "label": "List available coupons (getCoupons)",
                        "value": "cart.getCoupons",
                        "description": "Get a list of valid discount coupons that can be applied to the current cart."
                    },
                    {
                        "label": "Apply coupon (applyCoupon)",
                        "value": "cart.applyCoupon",
                        "description": "Apply a discount coupon to the current cart to reduce the total amount."
                    },
                    {
                        "label": "Remove coupon (removeCoupon)",
                        "value": "cart.removeCoupon",
                        "description": "Remove the currently applied discount coupon from the cart."
                    }
