{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Please enter Email or User ID",
                "displayName": "Email/User ID",
                "displayType": "text",
                "placeholder": "Enter Email/User ID"
            },
            "name": "email"
        }
    ],
    "definition": {
        "url": "https://app.asana.com/api/1.0/users/",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors[0].message}}"
            },
            "output": "{{response.data}}"
        },
        "transform": {
            "url": "function transformURL() { const encodedURL = url + encodeURIComponent('{{parameters.email}}'); return encodedURL; } return transformURL();"
        }
    }
}
