{
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "linkedin",
                        "secret": "{{parameters.secret}}",
                        "resource": "article",
                        "operation": "article.create",
                        "loadOptionsMethod": "getLinkedInSubAccounts"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "sub"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "Select Author account",
                "displayName": "LinkedIn Author Account",
                "displayType": "select",
                "placeholder": "Eg: User1"
            },
            "name": "author"
        },
        {
            "meta": {
                "htmlProps": {
                    "disabled": false,
                    "overrideDynamicSupport": true
                },
                "validation": {
                    "max": 2000,
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Please add the Content"
                    }
                },
                "displayName": "Post",
                "displayType": "textarea",
                "placeholder": "Enter the text of the Content"
            },
            "name": "content"
        },
        {
            "meta": {
                "validation": {
                    "max": 2000,
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Please add the Header"
                    }
                },
                "displayName": "Link Header",
                "displayType": "text",
                "placeholder": "Enter the Header of the Post"
            },
            "name": "linkheader"
        },
        {
            "meta": {
                "validation": {
                    "max": 2000,
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Please add the Link"
                    }
                },
                "displayName": "Link",
                "displayType": "text",
                "placeholder": "Enter the Link for the Post"
            },
            "name": "link"
        }
    ],
    "getLinkedInSubAccounts": {
        "definition": {
            "qs": {},
            "url": "https://api.linkedin.com/v2/userinfo",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.api_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            },
            "transform": {
                "output": "const options = { name: output.name, sub: 'urn:li:person:' + output.sub }; return [options];"
            }
        }
    },
    "definition": {
        "url": "https://api.linkedin.com/v2/ugcPosts",
        "body": {
            "author": "{{parameters.author}}",
            "visibility": {
                "com.linkedin.ugc.MemberNetworkVisibility": "PUBLIC"
            },
            "lifecycleState": "PUBLISHED",
            "specificContent": {
                "com.linkedin.ugc.ShareContent": {
                    "media": [
                        {
                            "title": {
                                "text": "{{parameters.linkheader}}"
                            },
                            "status": "READY",
                            "description": {
                                "text": "{{parameters.content}}"
                            },
                            "originalUrl": "{{parameters.link}}"
                        }
                    ],
                    "shareCommentary": {
                        "text": "{{parameters.content}}"
                    },
                    "shareMediaCategory": "ARTICLE"
                }
            }
        },
        "method": "post",
        "headers": {
            "content-type": "application/json",
            "Authorization": "Bearer {{secrets.api_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
