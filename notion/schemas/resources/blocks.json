{
    "append": {
        "definition": {
            "url": "https://api.notion.com/v1/blocks/{{parameters.block_id}}/children",
            "body": {
                "children": "{{children}}"
            },
            "method": "patch",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}",
                "Notion-Version": "2022-06-28"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            },
            "transform": {
                "body": "function transformBody() { const children = body.children.map((child) => { const block = { object: 'block', type: child.blockType }; block[child.blockType] = { rich_text: [ { type: 'text', text: { content: child.content, link: child.url ? { url: child.url } : null, }, }, ], }; return block; }); return { children: children }; } return transformBody();"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Block ID is required to retrieve block children."
                        }
                    },
                    "description": "The unique identifier for a block in Notion. To get it, right-click a block in the Notion UI, select 'Copy link,' and use the part after the last hyphen in the URL. Refer to the <a href='https://developers.notion.com/reference/block' target='_blank'>Notion API Documentation</a>.",
                    "displayName": "Block/Page ID",
                    "displayType": "text",
                    "placeholder": "Enter the Block ID or Page ID"
                },
                "name": "block_id"
            },
            {
                "meta": {
                    "children": [
                        {
                            "meta": {
                                "options": [
                                    {
                                        "label": "Paragraph",
                                        "value": "paragraph"
                                    },
                                    {
                                        "label": "Heading 1",
                                        "value": "heading_1"
                                    },
                                    {
                                        "label": "Heading 2",
                                        "value": "heading_2"
                                    },
                                    {
                                        "label": "Heading 3",
                                        "value": "heading_3"
                                    },
                                    {
                                        "label": "Bulleted List",
                                        "value": "bulleted_list_item"
                                    },
                                    {
                                        "label": "Numbered List",
                                        "value": "numbered_list_item"
                                    },
                                    {
                                        "label": "To-Do",
                                        "value": "to_do"
                                    },
                                    {
                                        "label": "Toggle",
                                        "value": "toggle"
                                    }
                                ],
                                "validation": {
                                    "required": true
                                },
                                "displayName": "Choose block type",
                                "displayType": "select",
                                "placeholder": "Select the type of block to append."
                            },
                            "name": "blockType"
                        },
                        {
                            "meta": {
                                "validation": {
                                    "required": true
                                },
                                "displayName": "Block Content",
                                "displayType": "textarea",
                                "placeholder": "Enter the content for the block (e.g., text or heading content)."
                            },
                            "name": "content"
                        },
                        {
                            "meta": {
                                "validation": {
                                    "required": false
                                },
                                "displayName": "Optional URL",
                                "displayType": "text",
                                "placeholder": "Enter an optional URL for rich text links (e.g., https://example.com)."
                            },
                            "name": "url"
                        }
                    ],
                    "validation": {
                        "required": true
                    },
                    "description": "An array of block objects to append as children to the specified block.",
                    "displayName": "Block Children",
                    "displayType": "array"
                },
                "name": "children"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Block ID is required to delete a block."
                    }
                },
                "description": "The unique identifier for a block in Notion (e.g., paragraph, heading). To get it, right-click a block in the Notion UI, select 'Copy link,' and use the part after the last hyphen in the URL. Refer to the <a href='https://developers.notion.com/reference/block' target='_blank'>Notion API Documentation</a>.",
                "displayName": "Block/Page ID",
                "displayType": "text",
                "placeholder": "Enter the Block ID or page ID."
            },
            "name": "block_id"
        }
    ],
    "definition": {
        "url": "https://api.notion.com/v1/blocks/{{parameters.block_id}}",
        "method": "delete",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}",
            "Notion-Version": "2022-06-28"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
