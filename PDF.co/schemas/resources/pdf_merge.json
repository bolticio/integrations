{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "PDF URL is required"
                    }
                },
                "description": "Enter the URL of the PDF file. If you want to merge multiple files, you can add multiple URLs using comma separated.",
                "displayName": "PDF URL",
                "displayType": "url",
                "placeholder": "Merge multiple PDF files into a single PDF document."
            },
            "name": "url"
        }
    ],
    "definition": {
        "url": "https://api.pdf.co/v1/pdf/merge",
        "body": {
            "url": "{{parameters.url}}"
        },
        "method": "post",
        "headers": {
            "x-api-key": "{{secrets.api_key}}",
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.data.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
