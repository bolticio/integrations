{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Excel URL is required"
                    }
                },
                "description": "Converts a xls/xlsx/csv file to xml.",
                "displayName": "Excel URL",
                "displayType": "url",
                "placeholder": "Enter the URL of the Excel file."
            },
            "name": "url"
        }
    ],
    "definition": {
        "url": "https://api.pdf.co/v1/xls/convert/to/xml",
        "body": {
            "url": "{{parameters.url}}"
        },
        "method": "post",
        "headers": {
            "x-api-key": "{{secrets.api_key}}",
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.data.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
