{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "displayName": "Monitor ID",
                "displayType": "text",
                "placeholder": "Enter the Monitor ID"
            },
            "name": "id"
        }
    ],
    "definition": {
        "qs": {},
        "url": "https://uptime.betterstack.com/api/v2/monitors/{{parameters.id}}",
        "body": {},
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors}}"
            },
            "output": "{{response.data}}"
        }
    }
}
