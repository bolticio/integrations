{
    "getForms": {
        "definition": {
            "url": "https://api.hubapi.com/marketing/v3/forms",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data.results}}"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "readOnly": false,
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "max": 1000000000,
                    "min": 10,
                    "required": true
                },
                "description": "Portal ID of your HubSpot account.",
                "displayName": "Portal ID",
                "displayType": "number",
                "placeholder": "Enter porltal ID"
            },
            "name": "portalId"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "secret": "{{parameters.secret}}",
                        "resource": "forms",
                        "operation": "forms.create_form_submission",
                        "loadOptionsMethod": "getForms"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "The HubSpot form to which submission data will be sent.",
                "displayName": "Forms",
                "displayType": "autocomplete",
                "placeholder": "Select a form"
            },
            "name": "forms"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The first name of the person submitting the form.",
                "displayName": "First Name",
                "displayType": "text",
                "placeholder": "Enter first name"
            },
            "name": "firstName"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The last name of the person submitting the form.",
                "displayName": "Last Name",
                "displayType": "text",
                "placeholder": "Enter last name"
            },
            "name": "lastName"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The email address of the form submitter.",
                "displayName": "Email",
                "displayType": "email",
                "placeholder": "Enter email"
            },
            "name": "email"
        },
        {
            "meta": {
                "children": [
                    {
                        "meta": {
                            "validation": {
                                "required": false
                            },
                            "description": "HubSpot user token (HUTK) used for tracking anonymous visitors.",
                            "displayName": "HubSpot User Token",
                            "displayType": "text",
                            "placeholder": "Enter hutk (HubSpot user token)"
                        },
                        "name": "hutk"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": false
                            },
                            "description": "The IP address of the user submitting the form.",
                            "displayName": "IP Address",
                            "displayType": "text",
                            "placeholder": "Enter IP address"
                        },
                        "name": "ipAddress"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": false
                            },
                            "description": "The name of the page where the form was submitted.",
                            "displayName": "Page Name",
                            "displayType": "text",
                            "placeholder": "Enter page name"
                        },
                        "name": "pageName"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": false
                            },
                            "description": "The URL of the page where the form was submitted.",
                            "displayName": "Page URI",
                            "displayType": "text",
                            "placeholder": "Enter page URL"
                        },
                        "name": "pageUri"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": false
                            },
                            "description": "The URL to redirect when the form is submitted.",
                            "displayName": "Redirect URL",
                            "displayType": "text",
                            "placeholder": "Enter redirect URL"
                        },
                        "name": "redirectUrl"
                    }
                ],
                "validation": {
                    "required": false
                },
                "description": "Context object required for tracking visitors.",
                "displayName": "Context",
                "displayType": "object"
            },
            "name": "hs_context"
        }
    ],
    "definition": {
        "url": "https://forms.hubspot.com/uploads/form/v2/{{parameters.portalId}}/{{parameters.forms}}",
        "body": {
            "email": "{{parameters.email}}",
            "lastname": "{{parameters.lastName}}",
            "firstname": "{{parameters.firstName}}",
            "hs_context": "{{parameters.hs_context}}"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/x-www-form-urlencoded",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
