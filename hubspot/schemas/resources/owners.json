{
    "parameters": [
        {
            "meta": {
                "readOnly": false,
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "min": 1,
                    "required": true
                },
                "description": "The unique ID of the owner to retrieve.",
                "displayName": "Owner ID",
                "displayType": "text",
                "placeholder": "Enter owner ID"
            },
            "name": "ownerid"
        }
    ],
    "definition": {
        "url": "https://api.hubapi.com/crm/v3/owners/{{parameters.ownerid}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
