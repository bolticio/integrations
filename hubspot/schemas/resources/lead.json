{
    "update": {
        "definition": {
            "url": "https://api.hubapi.com/crm/v3/objects/leads/{{parameters.lead_id}}",
            "body": "{{parameters}}",
            "method": "patch",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Lead ID is required field."
                        }
                    },
                    "description": "The ID of the lead you want to update.",
                    "displayName": "Lead ID",
                    "displayType": "text",
                    "placeholder": "Enter the lead ID"
                },
                "name": "lead_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Lead name is required field."
                        }
                    },
                    "description": "Enter the name of the lead you want to create.",
                    "displayName": "Lead Name",
                    "displayType": "text",
                    "placeholder": "Enter the lead name"
                },
                "name": "hs_lead_name"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Lead type is required field."
                        }
                    },
                    "description": "Specify the type of the lead.",
                    "displayName": "Lead Type",
                    "displayType": "text",
                    "placeholder": "Enter the lead type (e.g., New Business)"
                },
                "name": "hs_lead_type"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Lead label is required field."
                        }
                    },
                    "description": "Specify the label for the lead.",
                    "displayName": "Lead Label",
                    "displayType": "text",
                    "placeholder": "Enter the lead label (e.g., Warm, Hot)"
                },
                "name": "hs_lead_label"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Contact ID is required field."
                        }
                    },
                    "description": "The ID of the contact to associate with the lead.",
                    "displayName": "Contact ID",
                    "displayType": "text",
                    "placeholder": "Enter the contact ID to associate"
                },
                "name": "contact_id"
            }
        ]
    },
    "parameters": [],
    "definition": {
        "qs": {
            "limit": "{{parameters.limit}}",
            "offset": "{{parameters.offset}}"
        },
        "url": "https://api.hubapi.com/crm/v3/objects/leads",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data.results}}"
        },
        "pagination": {
            "qs": {
                "offset": "{{response.data.paging.next.offset}}"
            },
            "default": {
                "limit": 100,
                "offset": 0
            },
            "condition": "{{response.data.paging.next}} !== undefined"
        }
    }
}
