{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the crawl job to check status for.",
                "displayName": "Crawl ID",
                "displayType": "text",
                "placeholder": "Enter Crawl ID"
            },
            "name": "crawl_id"
        }
    ],
    "definition": {
        "url": "https://api.firecrawl.dev/v1/crawl/{{parameters.crawl_id}}",
        "method": "get",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    }
}
