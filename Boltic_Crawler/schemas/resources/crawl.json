    "map": {
        "definition": {
            "url": "https://api.firecrawl.dev/v1/map",
            "body": {
                "url": "{{parameters.url}}",
                "limit": "{{parameters.limit}}",
                "search": "{{parameters.search}}",
                "timeout": "{{parameters.timeout}}",
                "sitemapOnly": "{{parameters.sitemapOnly}}",
                "ignoreSitemap": "{{parameters.ignoreSitemap}}",
                "includeSubdomains": "{{parameters.includeSubdomains}}"
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "URL is required field"
                        }
                    },
                    "description": "The URL to map the search query",
                    "displayName": "URL",
                    "displayType": "url",
                    "placeholder": "Enter the URL to map"
                },
                "name": "url"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Search Query is required field"
                        }
                    },
                    "description": "The search query to map the URL",
                    "displayName": "Search Query",
                    "displayType": "text",
                    "placeholder": "Enter the search query"
                },
                "name": "search"
            },
            {
                "meta": {
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Ignore the sitemap in the URL",
                    "displayName": "Ignore Sitemap",
                    "displayType": "toggle",
                    "placeholder": "Enter Ignore Sitemap"
                },
                "name": "ignoreSitemap"
            },
            {
                "meta": {
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Only map the sitemap in the URL",
                    "displayName": "Sitemap Only",
                    "displayType": "toggle",
                    "placeholder": "Enter Ignore Sitemap"
                },
                "name": "sitemapOnly"
            },
            {
                "meta": {
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Include subdomains in the map",
                    "displayName": "Include Subdomains",
                    "displayType": "toggle",
                    "placeholder": "Enter Include Subdomains"
                },
                "name": "includeSubdomains"
            },
            {
                "meta": {
                    "value": 5000,
                    "validation": {
                        "min": 1,
                        "required": false
                    },
                    "description": "The limit of the map",
                    "displayName": "Limit",
                    "displayType": "number",
                    "placeholder": "Enter the Limit"
                },
                "name": "limit"
            },
            {
                "meta": {
                    "value": 30000,
                    "validation": {
                        "min": 1000,
                        "required": false
                    },
                    "description": "The timeout of the map",
                    "displayName": "Timeout",
                    "displayType": "number",
                    "placeholder": "Enter the Timeout"
                },
                "name": "timeout"
            }
        ]
    },
    "search": {
        "definition": {
