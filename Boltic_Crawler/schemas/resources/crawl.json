{
    "definition": {
        "url": "https://api.firecrawl.dev/v1/scrape",
        "body": {
            "url": "{{parameters.url}}",
            "formats": "{{parameters.formats}}",
            "timeout": "{{parameters.timeout}}",
            "parsePDF": "{{parameters.parsePDF}}",
            "onlyMainContent": "{{parameters.onlyMainContent}}"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    },
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "URL is required field"
                    }
                },
                "description": "Enter the URL you want to scrape.",
                "displayName": "URL",
                "displayType": "url",
                "placeholder": "Enter the URL"
            },
            "name": "url"
        },
        {
            "meta": {
                "value": [
                    "markdown"
                ],
                "options": [
                    {
                        "label": "Markdown",
                        "value": "markdown"
                    },
                    {
                        "label": "HTML",
                        "value": "html"
                    },
                    {
                        "label": "Raw HTML",
                        "value": "rawHtml"
                    },
                    {
                        "label": "Screenshot",
                        "value": "screenshot"
                    },
                    {
                        "label": "Links",
                        "value": "links"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Output Formats is required field"
                    }
                },
                "description": "Choose one or more output formats (e.g., markdown, html, screenshot, links, rawHtml).",
                "displayName": "Output Formats",
                "displayType": "multiselect",
                "placeholder": "Select output formats"
            },
            "name": "formats"
        },
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Return only the main content of the page (excluding headers, nav, footers, etc.).",
                "displayName": "Only Main Content",
                "displayType": "toggle",
                "placeholder": "Enter Only Main Content"
            },
            "name": "onlyMainContent"
        },
        {
            "meta": {
                "value": 30000,
                "validation": {
                    "min": 1000,
                    "required": false
                },
                "description": "Maximum duration in milliseconds to wait for the page to respond.",
                "displayName": "Timeout (ms)",
                "displayType": "number",
                "placeholder": "Enter Timeout"
            },
            "name": "timeout"
        },
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Extract and convert PDF content to markdown.",
                "displayName": "Parse PDF",
                "displayType": "toggle",
                "placeholder": "Enter Parse PDF"
            },
            "name": "parsePDF"
        }
    ]
}
