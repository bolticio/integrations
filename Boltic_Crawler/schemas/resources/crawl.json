{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "Crawl Website",
                        "value": "crawl.crawl",
                        "description": "Crawl a website for pages."
                    },
                    {
                        "label": "Crawl Status",
                        "value": "crawl.crawl_status",
                        "description": "Check the status of a crawl job."
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Select the operation you want to perform.",
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "value": "crawl",
                            "operator": "EQUALS"
                        }
                    ]
                }
            },
            "name": "operation"
        }
