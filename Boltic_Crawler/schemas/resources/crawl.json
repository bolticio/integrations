                    "options": [
                        {
                            "label": "Markdown",
                            "value": "markdown"
                        },
                        {
                            "label": "HTML",
                            "value": "html"
                        },
                        {
                            "label": "Raw HTML",
                            "value": "rawHtml"
                        },
                        {
                            "label": "Screenshot",
