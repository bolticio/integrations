{
    "getById": {
        "definition": {
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders/{{parameters.order_id}}.json",
            "method": "get",
            "headers": {
                "X-Shopify-Access-Token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "config": {
                        "url": "integrations/options",
                        "body": {
                            "name": "shopify",
                            "secret": "{{parameters.secret}}",
                            "resource": "orders",
                            "operation": "orders.getById",
                            "loadOptionsMethod": "getOrders"
                        },
                        "method": "post",
                        "urlType": "options",
                        "labelKey": "name",
                        "valueKey": "id"
                    },
                    "options": [],
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the order to be updated.",
                    "displayName": "Order ID",
                    "displayType": "select",
                    "placeholder": "Select an order"
                },
                "name": "order_id"
            }
        ]
    },
    "getOrders": {
        "definition": {
            "qs": {},
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders.json",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "X-shopify-access-token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data.orders}}"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
