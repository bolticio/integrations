{
    "create": {
        "definition": {
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders/{{parameters.order_id}}/transactions.json",
            "body": {
                "transaction": {
                    "kind": "{{parameters.kind}}",
                    "amount": "{{parameters.amount}}",
                    "currency": "{{parameters.currency}}"
                }
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "X-Shopify-Access-Token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "config": {
                        "url": "integrations/options",
                        "body": {
                            "name": "shopify",
                            "secret": "{{parameters.secret}}",
                            "resource": "transaction",
                            "operation": "transaction.create",
                            "loadOptionsMethod": "getOrders"
                        },
                        "method": "post",
                        "urlType": "options",
                        "labelKey": "name",
                        "valueKey": "id"
                    },
                    "options": [],
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the order to be updated.",
                    "displayName": "Order ID",
                    "displayType": "select",
                    "placeholder": "Select an order"
                },
                "name": "order_id"
            },
            {
                "meta": {
                    "options": [
                        {
                            "label": "Authorization",
                            "value": "authorization"
                        },
                        {
                            "label": "Capture",
                            "value": "capture"
                        },
                        {
                            "label": "Sale",
                            "value": "sale"
                        }
                    ],
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": true
                    },
                    "description": "The type of transaction (authorization, capture, sale, etc.).",
                    "displayName": "Transaction Kind",
                    "displayType": "select",
                    "placeholder": "Select transaction kind"
                },
                "name": "kind"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The amount for the transaction.",
                    "displayName": "Amount",
                    "displayType": "text",
                    "placeholder": "Enter the transaction amount"
                },
                "name": "amount"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The currency of the transaction (e.g., USD, EUR).",
                    "displayName": "Currency",
                    "displayType": "text",
                    "placeholder": "Enter the currency"
                },
                "name": "currency"
            }
        ]
    },
    "getOrders": {
        "definition": {
            "qs": {},
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders.json",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "X-shopify-access-token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data.orders}}"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "shopify",
                        "secret": "{{parameters.secret}}",
                        "resource": "transaction",
                        "operation": "transaction.find",
                        "loadOptionsMethod": "getOrders"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "The ID of the order to be updated.",
                "displayName": "Order ID",
                "displayType": "select",
                "placeholder": "Select an order"
            },
            "name": "order_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders/{{parameters.order_id}}/transactions.json",
        "method": "get",
        "headers": {
            "X-Shopify-Access-Token": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors}}"
            },
            "output": "{{response.data}}"
        }
    }
}
