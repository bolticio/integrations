{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The title of the new blog.",
                "displayName": "Title",
                "displayType": "text",
                "placeholder": "Enter blog title"
            },
            "name": "title"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The handle for the blog URL.",
                "displayName": "Handle",
                "displayType": "text",
                "placeholder": "Enter blog handle"
            },
            "name": "handle"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/blogs.json?limit=250",
        "method": "get",
        "headers": {
            "X-Shopify-Access-Token": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors}}"
            },
            "output": "{{response.data.blogs}}"
        }
    }
}
