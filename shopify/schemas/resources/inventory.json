{
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "shopify",
                        "secret": "{{parameters.secret}}",
                        "resource": "inventory",
                        "operation": "inventory.get",
                        "loadOptionsMethod": "getLocations"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "The ID of the location for which you want to retrieve inventory levels.",
                "displayName": "Location ID",
                "displayType": "select",
                "placeholder": "Enter Location ID"
            },
            "name": "location_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the inventory item to update.",
                "displayName": "Inventory Item ID",
                "displayType": "text",
                "placeholder": "Enter the  ID"
            },
            "name": "inventory_item_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The count of inventory item to updated.",
                "displayName": "Stock Value",
                "displayType": "number",
                "placeholder": "Enter the  Value"
            },
            "name": "available"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-01/inventory_levels/set.json",
        "body": {
            "available": "{{parameters.available}}",
            "location_id": "{{parameters.location_id}}",
            "inventory_item_id": "{{parameters.inventory_item_id}}"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "X-shopify-access-token": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors}}"
            },
            "output": "{{response.data}}"
        }
    }
}
