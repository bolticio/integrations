{
    "create": {
        "definition": {
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/fulfillments.json",
            "body": {
                "fulfillment": {
                    "location_id": "{{parameters.location_id}}",
                    "tracking_number": "{{parameters.tracking_number}}",
                    "line_items_by_fulfillment_order": [
                        {
                            "fulfillment_order_id": "{{parameters.fulfillment_order_id}}"
                        }
                    ]
                }
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "X-Shopify-Access-Token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the location fulfilling the order.",
                    "displayName": "Location ID",
                    "displayType": "text",
                    "placeholder": "Enter the location ID"
                },
                "name": "location_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the fulfillment order to fulfill.",
                    "displayName": "Fulfillment Order ID",
                    "displayType": "text",
                    "placeholder": "Enter the fulfillment order ID"
                },
                "name": "fulfillment_order_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": false
                    },
                    "description": "Tracking number for the shipment.",
                    "displayName": "Tracking Number",
                    "displayType": "text",
                    "placeholder": "Enter the tracking number"
                },
                "name": "tracking_number"
            }
        ]
    },
    "getOrders": {
        "definition": {
            "qs": {},
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders.json",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "X-shopify-access-token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data.orders}}"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "shopify",
                        "secret": "{{parameters.secret}}",
                        "resource": "fullfillment",
                        "operation": "fullfillment.get_orders",
                        "loadOptionsMethod": "getOrders"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "The ID of the order to be updated.",
                "displayName": "Order ID",
                "displayType": "select",
                "placeholder": "Select an order"
            },
            "name": "order_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/orders/{{parameters.order_id}}/fulfillment_orders.json",
        "method": "get",
        "headers": {
            "X-Shopify-Access-Token": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors}}"
            },
            "output": "{{response.data}}"
        }
    }
}
