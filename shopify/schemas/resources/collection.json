{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The title of the custom collection.",
                "displayName": "Title",
                "displayType": "text",
                "placeholder": "Enter the title of the custom collection"
            },
            "name": "title"
        },
        {
            "meta": {
                "htmlProps": {
                    "height": "200px",
                    "language": "html",
                    "fullscreen": true
                },
                "validation": {
                    "required": false
                },
                "description": "The description of the custom collection.",
                "displayName": "Description",
                "displayType": "code",
                "placeholder": "Enter a description for the custom collection"
            },
            "name": "body_html"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/custom_collections.json",
        "body": {
            "custom_collection": {
                "title": "{{parameters.title}}",
                "body_html": "{{parameters.body_html}}"
            }
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "X-Shopify-Access-Token": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
