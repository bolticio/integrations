                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The IDs of the custom collections to retrieve.",
                    "displayName": "Collection IDs",
                    "displayType": "text",
                    "placeholder": "Enter comma-separated collection IDs"
                },
                "name": "ids"
            }
        ]
    },
