{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "Get a Collection",
                        "value": "collection.get",
                        "description": "Retrieve details of a specific collection"
                    },
                    {
                        "label": "Get Collection Products",
                        "value": "collection.get_products",
                        "description": "Fetch products belonging to a specific collection"
                    },
                    {
                        "label": "Create a Custom Collection",
                        "value": "collection.create",
                        "description": "Create a new custom collection"
                    },
                    {
                        "label": "Get a List of Custom Collections",
                        "value": "collection.get_list",
                        "description": "Retrieve a list of all custom collections"
                    },
                    {
                        "label": "Update a Custom Collection",
                        "value": "collection.update",
                        "description": "Modify an existing custom collection"
                    },
                    {
                        "label": "Delete a Custom Collection",
                        "value": "collection.delete",
                        "description": "Remove a custom collection from the store"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Select the operation you want to perform.",
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "value": "collection",
                            "operator": "EQUALS"
                        }
                    ]
                }
            },
            "name": "operation"
        }
    ],
    "create_entry": {
        "definition": {
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/blogs/{{parameters.blog_id}}/articles.json",
            "body": {
                "article": {
                    "title": "{{parameters.title}}",
                    "author": "{{parameters.author}}",
                    "body_html": "{{parameters.body_html}}",
                    "published": "{{parameters.published}}"
                }
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "X-Shopify-Access-Token": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the blog where the entry will be created.",
                    "displayName": "Blog ID",
                    "displayType": "text",
                    "placeholder": "Enter blog ID"
                },
                "name": "blog_id"
            },
            {
                "meta": {
                    "config": {
                        "url": "integrations/options",
                        "body": {
                            "name": "shopify",
                            "secret": "{{parameters.secret}}",
                            "resource": "blog",
                            "operation": "blog.create_entry",
                            "loadOptionsMethod": "get_list"
                        },
                        "method": "post",
                        "urlType": "options",
                        "labelKey": "title",
                        "valueKey": "id"
                    },
                    "options": [],
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the blog where the entry will be created.",
                    "displayName": "Blog ID",
                    "displayType": "select",
                    "placeholder": "Enter blog ID"
                },
                "name": "blog_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The title of the new blog entry.",
                    "displayName": "Title",
                    "displayType": "text",
                    "placeholder": "Enter article title"
                },
                "name": "title"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The HTML content of the blog entry.",
                    "displayName": "Content",
                    "displayType": "textarea",
                    "placeholder": "Enter article content"
                },
                "name": "body_html"
            },
            {
                "meta": {
                    "validation": {
                        "required": false
                    },
                    "description": "The author of the blog entry.",
                    "displayName": "Author",
                    "displayType": "text",
                    "placeholder": "Enter author name"
                },
                "name": "author"
            },
            {
                "meta": {
                    "options": [
                        {
                            "label": "Yes",
                            "value": true
                        },
                        {
                            "label": "No",
                            "value": false
                        }
                    ],
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Set to true to publish the article immediately.",
                    "displayName": "Published",
                    "displayType": "select"
                },
                "name": "published"
            }
        ]
    },
    "get_list": {
        "definition": {
            "url": "https://{{secrets.domain}}.myshopify.com/admin/api/2024-07/custom_collections.json?ids={{parameters.ids}}",
