{
    "parameters": [
        {
            "meta": {
                "value": "access_token",
                "options": [
                    {
                        "label": "Fynd Commerce",
                        "value": "access_token"
                    },
                    {
                        "label": "Fynd Extension",
                        "value": "fynd_extension"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "API Key is required"
                    }
                },
                "description": "",
                "displayName": "API Key",
                "displayType": "text",
                "placeholder": "Enter your API Key"
            },
            "name": "api_key"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "API Secret is required"
                    }
                },
                "description": "",
                "displayName": "API Secret",
                "displayType": "password",
                "placeholder": "Enter your API Secret"
            },
            "name": "api_secret"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Domain is required"
                    }
                },
                "description": "Enter Fynd Commerce Domain, if your domain is https://fynd.com then enter api.fynd.com",
                "displayName": "Domain",
                "displayType": "text",
                "placeholder": "Eg: api.fynd.com"
            },
            "name": "domain"
        }
    ],
    "access_token": {
        "token": {
            "url": "https://{{secrets.domain}}/service/panel/authentication/v1.0/company/{{secrets.company_id}}/oauth/token",
            "body": {
                "grant_type": "client_credentials"
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.api_key}}:{{secrets.api_secret}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "refresh": {
            "url": "https://{{secrets.domain}}/service/panel/authentication/v1.0/company/{{secrets.company_id}}/oauth/token",
            "body": {
                "grant_type": "client_credentials"
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.api_key}}:{{secrets.api_secret}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "validate": {
            "url": "https://{{secrets.domain}}/service/platform/company-profile/v1.0/company/{{secrets.company_id}}/metrics",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Company ID is required"
                        }
                    },
                    "description": "",
                    "displayName": "Company ID",
                    "displayType": "number",
                    "placeholder": "Enter Company ID here",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "company_id"
            }
        ]
    },
    "fynd_extension": {
        "validate": {
            "url": "https://{{secrets.domain}}/service/panel/partners/v1.0/extensions/details/{{secrets.api_key}}",
            "method": "get",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.api_key}}:{{secrets.api_secret}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Test Company ID is required"
                        }
                    },
                    "description": "",
                    "displayName": "Test Company ID",
                    "displayType": "number",
                    "placeholder": "Enter Test Company ID here",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "fynd_extension",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "test_company_id"
            }
        ]
    }
}
