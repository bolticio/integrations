{
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "isFp": true,
                        "name": "platform",
                        "secret": "{{parameters.secret}}",
                        "resource": "user",
                        "loadOptionsMethod": "getApplications"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "A `application_id` is a unique identifier for a particular sale channel.",
                "displayName": "Application ID",
                "displayType": "autocomplete"
            },
            "name": "application_id"
        },
        {
            "meta": {
                "validation": {},
                "description": "The search query. Mobile number or email ID of a customer.",
                "displayName": "q",
                "displayType": "text"
            },
            "name": "q"
        }
    ],
    "getApplications": {
        "definition": {
            "qs": {
                "page_no": 1,
                "is_active": true,
                "page_size": 100,
                "company_id": "{{secrets.company_id}}"
            },
            "url": "https://api.fynd.com/service/platform/configuration/v1.0/company/{{secrets.company_id}}/application",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error.message}}"
                },
                "output": "{{response.data.items}}"
            }
        }
    },
    "definition": {
        "qs": {
            "q": "{{parameters.q}}",
            "query": "{{parameters.query}}"
        },
        "url": "https://api.fynd.com/service/platform/user/v1.0/company/{{secrets.company_id}}/application/{{parameters.application_id}}/customers/search",
        "body": {},
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": ""
            },
            "output": "{{response.data}}"
        }
    }
}
