{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The unique id for the list.",
                "displayName": "List ID",
                "displayType": "text",
                "placeholder": "Enter the List ID"
            },
            "name": "list_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The email address of the new list member.",
                "displayName": "Email Address",
                "displayType": "text",
                "placeholder": "Enter the email address"
            },
            "name": "email_address"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Subscribed",
                        "value": "subscribed"
                    },
                    {
                        "label": "Unsubscribed",
                        "value": "unsubscribed"
                    },
                    {
                        "label": "Cleaned",
                        "value": "cleaned"
                    },
                    {
                        "label": "Pending",
                        "value": "pending"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "The status of the list member.",
                "displayName": "Status",
                "displayType": "select",
                "placeholder": "Select status"
            },
            "name": "status"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Additional fields to merge with the list member's data.",
                "displayName": "Merge Fields",
                "displayType": "text",
                "placeholder": "Enter the merge fields"
            },
            "name": "merge_fields"
        }
    ],
    "definition": {
        "url": "https://{{secrets.data_center}}.api.mailchimp.com/3.0/lists/{{parameters.list_id}}/members/{{email_address}}",
        "body": {
            "status": "{{parameters.status}}",
            "email_address": "{{parameters.email_address}}"
        },
        "method": "put",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
