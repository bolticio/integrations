                    }
                },
                "description": "Available Countries to which the SMS will be sent.",
                "displayName": "Recipient Country",
                "displayType": "autocomplete",
                "placeholder": "Enter the recipient's country"
            },
            "name": "code"
        },
        {
            "meta": {
                "htmlProps": {
                    "continents": [
                        "NA",
                        "SA",
                        "AS"
                    ],
                    "allowDynamic": true,
                    "onlyCountries": [
                        "IN",
                        "SA",
