                    ]
                },
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Recipient Number is required field"
                    },
                    "matchIsValidTel": true
                },
                "description": "Phone number to which the SMS will be sent.",
                "displayName": "Recipient Number",
                "displayType": "phone",
                "placeholder": "Enter the recipient phone number"
            },
            "name": "to"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Message Body is required field"
                    }
                },
                "description": "Message content that will be delivered via SMS.",
                "displayName": "Message Body",
                "displayType": "textarea",
                "placeholder": "Enter the SMS text"
            },
            "name": "body"
        }
    ],
    "definition": {
        "url": "https://api.twilio.com/2010-04-01/Accounts/{{secrets.ssid}}/Messages.json",
        "body": {
            "To": "{{parameters.to}}",
            "Body": "{{parameters.body}} \nSend by Boltic",
            "From": "{{secrets.from}}"
        },
        "method": "post",
        "headers": {
            "content-type": "application/x-www-form-urlencoded",
            "Authorization": "Basic convertBufferBase64String({{secrets.ssid}}:{{secrets.api_key}})"
        },
        "response": {
            "error": {
                "code": "{{response.data.code}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
