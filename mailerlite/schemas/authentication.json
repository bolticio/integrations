{
    "api_key": {
        "validate": {
            "url": "https://connect.mailerlite.com/api/groups",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "Refer to the <a href='https://dashboard.mailerlite.com/integrations/api' target='_blank'>MailerLite API documentation</a> for detailed instructions on getting your API key.",
                    "displayName": "API Key",
                    "displayType": "password",
                    "placeholder": "Enter API Key",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_key"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "API Key",
                        "value": "api_key"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
