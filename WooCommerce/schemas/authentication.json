{
    "basic_auth": {
        "validate": {
            "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/products?consumer_key={{secrets.consumer_key}}&consumer_secret={{secrets.consumer_secret}}",
            "method": "get",
            "headers": {
                "Content-Type": "application/json"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Store Domain is required"
                        }
                    },
                    "description": "Your WooCommerce Store Domain. Typically, the base URL is your website's domain (e.g., https://yourstore.com) refer to:<a href='https://woocommerce.github.io/woocommerce-rest-api-docs/#authentication' target='blank'> WooCommerce > Settings > Advanced > REST API.",
                    "displayName": "Store Domain",
                    "displayType": "text",
                    "placeholder": "Enter Store Domain ",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "basic_auth",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "store_domain"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Consumer Key is required"
                        }
                    },
                    "description": " Refer to: <a href='https://woocommerce.github.io/woocommerce-rest-api-docs/#authentication' target='blank'> WooCommerce > Settings > Advanced > REST API </a> for your WooCommerce API Consumer Key",
                    "displayName": "Consumer Key",
                    "displayType": "text",
                    "placeholder": "Enter Consumer Key",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "basic_auth",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "consumer_key"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Consumer Secret is required"
                        }
                    },
                    "description": "Refer to the WooCommerce documentation for more details.",
                    "displayName": "Consumer Secret",
                    "displayType": "password",
                    "placeholder": "Enter Consumer Secret",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "basic_auth",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "consumer_secret"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": "basic_auth",
                "options": [
                    {
                        "label": "Basic Auth",
                        "value": "basic_auth"
                    }
                ],
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "hidden",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
