{
    "getOrder": {
        "definition": {
            "qs": {
                "consumer_key": "{{secrets.consumer_key}}",
                "consumer_secret": "{{secrets.consumer_secret}}"
            },
            "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/orders",
            "method": "get",
            "headers": {
                "Accept": "application/json"
            },
            "response": {
                "error": {
                    "code": "{{response.data.data}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": []
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "orderAction",
                        "operation": "orderAction.send",
                        "loadOptionsMethod": "getOrder"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "id",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "The unique identifier of the order.",
                "displayName": "Order ID",
                "displayType": "select",
                "placeholder": "Enter Order ID"
            },
            "name": "order_id"
        }
    ],
    "definition": {
        "qs": {
            "consumer_key": "{{secrets.consumer_key}}",
            "consumer_secret": "{{secrets.consumer_secret}}"
        },
        "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/orders/{{parameters.order_id}}/actions/send_order_details",
        "method": "post",
        "headers": {
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.data.data}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
