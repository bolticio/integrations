{
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "customer",
                        "operation": "customer.get",
                        "loadOptionsMethod": "list"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "id",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "The unique identifier of the customer you want to retrieve.",
                "displayName": "Customer ID",
                "displayType": "select",
                "placeholder": "Enter the ID of the customer to retrieve"
            },
            "name": "customer_id"
        }
    ],
    "definition": {
        "qs": {
            "consumer_key": "{{secrets.consumer_key}}",
            "consumer_secret": "{{secrets.consumer_secret}}"
        },
        "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/customers/{{parameters.customer_id}}",
        "method": "get",
        "response": {
            "error": {
                "code": "{{response.data.data}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
