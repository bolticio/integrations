{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The name of the product.",
                "displayName": "Product Name",
                "displayType": "text",
                "placeholder": "Enter product name"
            },
            "name": "name"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Simple",
                        "value": "simple"
                    },
                    {
                        "label": "Variable",
                        "value": "variable"
                    },
                    {
                        "label": "Grouped",
                        "value": "grouped"
                    },
                    {
                        "label": "External",
                        "value": "external"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "The type of product (simple, variable, grouped, etc.).",
                "displayName": "Product Type",
                "displayType": "select",
                "placeholder": "Select product type"
            },
            "name": "type"
        },
        {
            "meta": {
                "validation": {
                    "pattern": "^[0-9]+(\\.[0-9]{1,2})?$",
                    "required": true,
                    "patternDetail": {
                        "errorMsg": "Price must be a valid number."
                    }
                },
                "description": "The regular price of the product.",
                "displayName": "Regular Price",
                "displayType": "text",
                "placeholder": "Enter regular price"
            },
            "name": "regular_price"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "A short description of the product.",
                "displayName": "Short Description",
                "displayType": "text",
                "placeholder": "Enter short description"
            },
            "name": "short_description"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "The description of the product.",
                "displayName": "Description",
                "displayType": "text",
                "placeholder": "Enter product description"
            },
            "name": "description"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Direct URL of a new image to upload.",
                "displayName": "Image URL",
                "displayType": "text",
                "placeholder": "Enter image URL"
            },
            "name": "src"
        }
    ],
    "definition": {
        "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/products?consumer_key={{secrets.consumer_key}}&consumer_secret={{secrets.consumer_secret}}",
        "body": {
            "name": "{{parameters.name}}",
            "type": "{{parameters.type}}",
            "images": [
                {
                    "src": "{{parameters.src}}"
                }
            ],
            "description": "{{parameters.description}}",
            "regular_price": "{{parameters.regular_price}}",
            "short_description": "{{parameters.short_description}}"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.data.data}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
