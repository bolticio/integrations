{
    "getOrder": {
        "definition": {
            "qs": {
                "consumer_key": "{{secrets.consumer_key}}",
                "consumer_secret": "{{secrets.consumer_secret}}"
            },
            "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/orders",
            "method": "get",
            "headers": {
                "Accept": "application/json"
            },
            "response": {
                "error": {
                    "code": "{{response.data.data.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": []
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "refund",
                        "operation": "refund.delete",
                        "loadOptionsMethod": "getOrder"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "id",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "displayName": "Order ID",
                "displayType": "select",
                "placeholder": "Enter Order ID"
            },
            "name": "order_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "order_id": "{{parameters.order_id}}",
                        "resource": "refund",
                        "operation": "refund.delete",
                        "loadOptionsMethod": "list"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "id",
                    "valueKey": "id",
                    "condition": "{{parameters.order_id}}"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "displayName": "Refund ID",
                "displayType": "select",
                "placeholder": "Enter Refund ID"
            },
            "name": "refund_id"
        }
    ],
    "definition": {
        "qs": {
            "consumer_key": "{{secrets.consumer_key}}",
            "consumer_secret": "{{secrets.consumer_secret}}"
        },
        "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/orders/{{parameters.order_id}}/refunds/{{parameters.refund_id}}?force=true",
        "method": "delete",
        "headers": {
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.data.data.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
