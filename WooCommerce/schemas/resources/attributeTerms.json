{
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "attributeTerms",
                        "operation": "attributeTerms.delete",
                        "loadOptionsMethod": "getAttribute"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "The name of the product attribute (e.g., Color, Size).",
                "displayName": "Attribute Name",
                "displayType": "select",
                "placeholder": "Enter the attribute name"
            },
            "name": "attribute_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "attributeTerms",
                        "operation": "attributeTerms.getOne",
                        "attribute_id": "{{parameters.attribute_id}}",
                        "loadOptionsMethod": "list"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id",
                    "condition": "{{parameters.attribute_id}}"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "The name of the attribute term (e.g., Red).",
                "displayName": "Term Name",
                "displayType": "select",
                "placeholder": "Enter the term name"
            },
            "name": "term_id"
        }
    ],
    "getAttribute": {
        "definition": {
            "qs": {
                "consumer_key": "{{secrets.consumer_key}}",
                "consumer_secret": "{{secrets.consumer_secret}}"
            },
            "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/products/attributes",
            "method": "get",
            "headers": {
                "Content-Type": "application/json"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": []
    },
    "definition": {
        "qs": {
            "consumer_key": "{{secrets.consumer_key}}",
            "consumer_secret": "{{secrets.consumer_secret}}"
        },
        "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/products/attributes/{{parameters.attribute_id}}/terms/{{parameters.term_id}}?force=true",
        "method": "delete",
        "response": {
            "error": {
                "code": "{{response.data.data.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
