{
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "productVariants",
                        "operation": "productVariants.update",
                        "loadOptionsMethod": "getProducts"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "Select the parent product to update the variation",
                "displayName": "Parent Product",
                "displayType": "select",
                "placeholder": "Select Parent Product"
            },
            "name": "product_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "WooCommerce",
                        "secret": "{{parameters.secret}}",
                        "resource": "productVariants",
                        "operation": "productVariants.update",
                        "product_id": "{{parameters.product_id}}",
                        "loadOptionsMethod": "list"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "id",
                    "valueKey": "id",
                    "condition": "{{parameters.product_id}}"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "Select the variation you want to update.",
                "displayName": "Variation ID",
                "displayType": "select",
                "placeholder": "Select Variation of the product"
            },
            "name": "variation_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "New regular price for the variation.",
                "displayName": "New Regular Price",
                "displayType": "text",
                "placeholder": "Enter new regular price"
            },
            "name": "regular_price"
        }
    ],
    "getProducts": {
        "definition": {
            "qs": {
                "consumer_key": "{{secrets.consumer_key}}",
                "consumer_secret": "{{secrets.consumer_secret}}"
            },
            "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/products",
            "method": "get",
            "response": {
                "error": {
                    "code": "{{response.data.data}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            },
            "pagination": {
                "qs": {},
                "type": "url",
                "default": {},
                "next_key": "next",
                "next_url": "{{response.headers.link}}",
                "condition": "{{response.headers.link}} !== null"
            }
        },
        "parameters": []
    },
    "definition": {
        "qs": {
            "consumer_key": "{{secrets.consumer_key}}",
            "consumer_secret": "{{secrets.consumer_secret}}"
        },
        "url": "https://{{secrets.store_domain}}/wp-json/wc/v3/products/{{parameters.product_id}}/variations/{{parameters.variation_id}}",
        "body": {
            "regular_price": "{{parameters.regular_price}}"
        },
        "method": "put",
        "response": {
            "error": {
                "code": "{{response.data.data}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
