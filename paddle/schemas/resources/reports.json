{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Report ID is required."
                    }
                },
                "description": "Paddle ID of the report entity to download as CSV.",
                "displayName": "Report ID",
                "displayType": "text",
                "placeholder": "rep_01gsz8z1q1n00f12qt82y31smh"
            },
            "name": "report_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment_url}}/reports/{{parameters.report_id}}/download-url",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        }
    }
}
