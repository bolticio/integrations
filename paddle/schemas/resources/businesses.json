{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the customer entity to work with.",
                "displayName": "Customer ID",
                "displayType": "text",
                "placeholder": "ctm_01hv6y1jedq4p1n0yqn5ba3ky4"
            },
            "name": "customer_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the business entity to work with.",
                "displayName": "Business ID",
                "displayType": "text",
                "placeholder": "biz_01hv8hkr641vmpwytx38znv56k"
            },
            "name": "business_id"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Name of this business.",
                "displayName": "Name",
                "displayType": "text",
                "placeholder": "Acme Inc."
            },
            "name": "name"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Company number for this business.",
                "displayName": "Company Number",
                "displayType": "text",
                "placeholder": "555775291485"
            },
            "name": "company_number"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Tax or VAT Number for this business.",
                "displayName": "Tax Identifier",
                "displayType": "text",
                "placeholder": "555952383"
            },
            "name": "tax_identifier"
        },
        {
            "meta": {
                "children": [
                    {
                        "meta": {
                            "validation": {
                                "required": false
                            },
                            "description": "Full name of this contact.",
                            "displayName": "Name",
                            "displayType": "text",
                            "placeholder": "John Doe"
                        },
                        "name": "name"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": true,
                                "requiredDetail": {
                                    "errorMsg": "Email is required"
                                }
                            },
                            "description": "Email address for this contact.",
                            "displayName": "Email",
                            "displayType": "text",
                            "placeholder": "john@example.com"
                        },
                        "name": "email"
                    }
                ],
                "htmlProps": {
                    "allowAdd": true
                },
                "validation": {
                    "required": false
                },
                "description": "List of contacts related to this business, typically used for sending invoices.",
                "displayName": "Contacts",
                "displayType": "array"
            },
            "name": "contacts"
        },
        {
            "meta": {
                "children": [
                    {
                        "meta": {
                            "validation": {
                                "required": true
                            },
                            "displayName": "Key",
                            "displayType": "text"
                        },
                        "name": "key"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": true
                            },
                            "displayName": "Value",
                            "displayType": "text"
                        },
                        "name": "value"
                    }
                ],
                "readOnly": false,
                "validation": {
                    "required": false
                },
                "description": "Your own structured key-value data.",
                "displayName": "Custom Data",
                "displayType": "keyvalue",
                "placeholder": "Enter custom data"
            },
            "name": "custom_data"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Active",
                        "value": "active"
                    },
                    {
                        "label": "Archived",
                        "value": "archived"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Whether this entity can be used in Paddle.",
                "displayName": "Status",
                "displayType": "select",
                "placeholder": "Select a status"
            },
            "name": "status"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment_url}}/customers/{{parameters.customer_id}}/businesses/{{parameters.business_id}}",
        "body": {
            "name": "{{parameters.name}}",
            "status": "{{parameters.status}}",
            "contacts": "{{parameters.contacts}}",
            "custom_data": "{{parameters.custom_data}}",
            "company_number": "{{parameters.company_number}}",
            "tax_identifier": "{{parameters.tax_identifier}}"
        },
        "method": "PATCH",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        }
    }
}
