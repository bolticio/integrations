{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Return only the IDs specified. Use a comma-separated list to get multiple entities.",
                "displayName": "ID",
                "displayType": "text",
                "placeholder": "Enter the customer ID or comma-separated list."
            },
            "name": "id"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Return entities that exactly match the specified email address. Use a comma-separated list to specify multiple email addresses. Recommended for precise matching of email addresses.",
                "displayName": "Email",
                "displayType": "text",
                "placeholder": "Enter the customer email ID or comma-separated list."
            },
            "name": "email"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Active",
                        "value": "active"
                    },
                    {
                        "label": "Archived",
                        "value": "archived"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Return entities that match the specified status.",
                "displayName": "Status",
                "displayType": "multiselect",
                "placeholder": "Select the status"
            },
            "name": "status"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Return entities that match a search query. Searches id, name, and email fields. Use the email query parameter for precise matching of email addresses.",
                "displayName": "Search",
                "displayType": "text",
                "placeholder": "Enter customer IDs, name or emails"
            },
            "name": "search"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "ID (ascending)",
                        "value": "id[ASC]"
                    },
                    {
                        "label": "ID (descending)",
                        "value": "id[DESC]"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Order returned entities by the specified field and direction (ascending or descending).",
                "displayName": "Order By ID",
                "displayType": "select",
                "placeholder": "Select an order"
            },
            "name": "order_by"
        }
    ],
    "getCustomers": {
        "definition": {
            "qs": {},
            "url": "https://{{secrets.environment_url}}/customers",
            "method": "get",
            "headers": {
                "Accept": "application/json",
                "Authorization": "Bearer {{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data}}"
                },
                "output": "{{response.data.data}}"
            }
        }
    },
    "definition": {
        "qs": {
            "id": "{{parameters.id}}",
            "email": "{{parameters.email}}",
            "search": "{{parameters.search}}",
            "status": "{{parameters.status}}",
            "order_by": "{{parameters.order_by}}"
        },
        "url": "https://{{secrets.environment_url}}/customers",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        },
        "pagination": {
            "qs": {
                "per_page": 200
            },
            "type": "url",
            "default": {
                "next_url": null,
                "per_page": 200
            },
            "next_url": "{{response.data.meta.pagination.next}}",
            "condition": "{{response.data.meta.pagination.has_more}} !== false"
        }
    }
}
