{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the customer entity to work with.",
                "displayName": "Customer ID",
                "displayType": "text",
                "placeholder": "ctm_01hv6y1jedq4p1n0yqn5ba3ky4"
            },
            "name": "customer_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the payment method entity to work with.",
                "displayName": "Payment Method ID",
                "displayType": "text",
                "placeholder": "paymtd_01j2jff1m3es31sdkejpaym164"
            },
            "name": "payment_method_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment_url}}/customers/{{parameters.customer_id}}/payment-methods/{{parameters.payment_method_id}}",
        "method": "delete",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
