{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "ID (ascending)",
                        "value": "id[ASC]"
                    },
                    {
                        "label": "ID (descending)",
                        "value": "id[DESC]"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Order returned entities by ID.",
                "displayName": "Order By",
                "displayType": "select",
                "placeholder": "Select ordering"
            },
            "name": "order_by"
        }
    ],
    "definition": {
        "qs": {
            "order_by": "{{parameters.order_by}}"
        },
        "url": "https://{{secrets.environment_url}}/events",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        },
        "pagination": {
            "qs": {
                "per_page": 200
            },
            "type": "url",
            "default": {
                "next_url": null,
                "per_page": 200
            },
            "next_url": "{{response.data.meta.pagination.next}}",
            "condition": "{{response.data.meta.pagination.has_more}} !== false"
        }
    }
}
