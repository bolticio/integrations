                "name": "{{parameters.name}}",
                "type": "{{parameters.type}}",
                "quantity": {
                    "maximum": "{{parameters.quantity_maximum}}",
                    "minimum": "{{parameters.quantity_minimum}}"
                },
                "tax_mode": "{{parameters.tax_mode}}",
                "product_id": "{{parameters.product_id}}",
                "unit_price": {
                    "amount": "{{parameters.unit_price_amount}}",
                    "currency_code": "{{parameters.unit_price_currency_code}}"
