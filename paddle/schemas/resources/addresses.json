{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "Create Address",
                        "value": "addresses.create",
                        "description": "Add a new address to a customer with country code, description, first line, second line, city, postal code, region, and custom data"
                    },
                    {
                        "label": "Get Address",
                        "value": "addresses.get",
                        "description": "Retrieve a specific address using its customer ID and address ID"
                    },
                    {
                        "label": "List Addresses",
                        "value": "addresses.list",
                        "description": "Get a paginated list of addresses for a specific customer with filtering options by ID, search query, and status (active/archived)"
                    },
                    {
                        "label": "Update Address",
                        "value": "addresses.update",
                        "description": "Modify existing address information including description, address lines, city, postal code, region, country code, custom data, and status"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Select the operation you want to perform.",
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "value": "addresses",
                            "operator": "EQUALS"
                        }
                    ]
                }
            },
            "name": "operation"
        }
    ],
    "create": {
        "definition": {
            "url": "https://{{secrets.environment_url}}/prices",
