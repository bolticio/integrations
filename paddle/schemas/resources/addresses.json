{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the customer entity to work with.",
                "displayName": "Customer ID",
                "displayType": "text",
                "placeholder": "e.g., ctm_01h04vsc0qhwtsbz6ajhbd842n"
            },
            "name": "customer_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the address entity to work with.",
                "displayName": "Address ID",
                "displayType": "text",
                "placeholder": "e.g., add_01h04vsfyx8vanh3xpyqhxgc10"
            },
            "name": "address_id"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Memorable description for this address.",
                "displayName": "Description",
                "displayType": "text",
                "placeholder": "e.g., Head Office"
            },
            "name": "description"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "First line of this address.",
                "displayName": "First Line",
                "displayType": "text",
                "placeholder": "e.g., 4050 Jefferson Plaza, 41st Floor"
            },
            "name": "first_line"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Second line of this address.",
                "displayName": "Second Line",
                "displayType": "text",
                "placeholder": "e.g., Apartment 12"
            },
            "name": "second_line"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "City of this address.",
                "displayName": "City",
                "displayType": "text",
                "placeholder": "e.g., New York"
            },
            "name": "city"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "ZIP or postal code of this address. Required for some countries.",
                "displayName": "Postal Code",
                "displayType": "text",
                "placeholder": "e.g., 10007"
            },
            "name": "postal_code"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "State, county, or region of this address.",
                "displayName": "Region",
                "displayType": "text",
                "placeholder": "e.g., NY"
            },
            "name": "region"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Supported two-letter ISO 3166-1 alpha-2 country code for this address.",
                "displayName": "Country Code",
                "displayType": "text",
                "placeholder": "e.g., US"
            },
            "name": "country_code"
        },
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Your own structured key-value data.",
                "displayName": "Custom Data",
                "displayType": "keyvalue",
                "placeholder": "Enter custom data"
            },
            "name": "custom_data",
            "schema": {
                "type": "event_properties",
                "label": "Event Properties",
                "children": [
                    {
                        "name": "key",
                        "validation": {
                            "required": true
                        },
                        "displayName": "Key",
                        "displayType": "text"
                    },
                    {
                        "name": "value",
                        "validation": {
                            "required": true
                        },
                        "displayName": "Value",
                        "displayType": "text"
                    }
                ],
                "validation": {}
            }
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Active",
                        "value": "active"
                    },
                    {
                        "label": "Archived",
                        "value": "archived"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Whether this entity can be used in Paddle.",
                "displayName": "Status",
                "displayType": "select",
                "placeholder": "Select status"
            },
            "name": "status"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment_url}}/customers/{{parameters.customer_id}}/addresses/{{parameters.address_id}}",
        "body": {
            "city": "{{parameters.city}}",
            "region": "{{parameters.region}}",
            "status": "{{parameters.status}}",
            "first_line": "{{parameters.first_line}}",
            "custom_data": "{{parameters.custom_data}}",
            "description": "{{parameters.description}}",
            "postal_code": "{{parameters.postal_code}}",
            "second_line": "{{parameters.second_line}}",
            "country_code": "{{parameters.country_code}}"
        },
        "method": "patch",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        }
    }
}
