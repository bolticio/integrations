{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the simulation (sim_*).",
                "displayName": "Simulation ID",
                "displayType": "text",
                "placeholder": "sim_abc123"
            },
            "name": "simulation_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the simulation run (simrun_*).",
                "displayName": "Simulation Run ID",
                "displayType": "text",
                "placeholder": "simrun_def456"
            },
            "name": "simulation_run_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Paddle ID of the simulation event to replay (ntfsimevt_*).",
                "displayName": "Simulation Event ID",
                "displayType": "text",
                "placeholder": "ntfsimevt_789ghi"
            },
            "name": "simulation_event_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment_url}}/simulations/{{parameters.simulation_id}}/runs/{{parameters.simulation_run_id}}/events/{{parameters.simulation_event_id}}/replay",
        "method": "post",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        }
    }
}
