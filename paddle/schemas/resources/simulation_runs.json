{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Simulation ID is required."
                    }
                },
                "description": "Paddle ID of the simulation entity to work with.",
                "displayName": "Simulation ID",
                "displayType": "text",
                "placeholder": "ntfsim_01gsz8z1q1n00f12qt82y31smh"
            },
            "name": "simulation_id"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Events",
                        "value": "events"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Include related entities in the response.",
                "displayName": "Include",
                "displayType": "multiselect",
                "placeholder": "Select entities to include"
            },
            "name": "include"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "ID (ascending)",
                        "value": "id[ASC]"
                    },
                    {
                        "label": "ID (descending)",
                        "value": "id[DESC]"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Order returned entities by the specified field and direction ([ASC] or [DESC]). Valid fields for ordering: id.",
                "displayName": "Order By",
                "displayType": "select",
                "placeholder": "id[ASC]"
            },
            "name": "order_by"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Return only the IDs specified. Use a comma-separated list to get multiple entities.",
                "displayName": "ID",
                "displayType": "text",
                "placeholder": "ntfsimrun_01gsz8z1q1n00f12qt82y31smh,ntfsimrun_01gsz8z1q1n00f12qt82y31abc"
            },
            "name": "id"
        }
    ],
    "definition": {
        "qs": {
            "id": "{{parameters.id}}",
            "include": "{{parameters.include}}",
            "order_by": "{{parameters.order_by}}"
        },
        "url": "https://{{secrets.environment_url}}/simulations/{{parameters.simulation_id}}/runs",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        },
        "pagination": {
            "qs": {
                "per_page": 50
            },
            "type": "url",
            "default": {
                "next_url": null,
                "per_page": 50
            },
            "next_url": "{{response.data.meta.pagination.next}}",
            "condition": "{{response.data.meta.pagination.has_more}} !== false"
        }
    }
}
