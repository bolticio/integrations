{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Price ID is required"
                    }
                },
                "description": "Paddle ID of the price entity to work with.",
                "displayName": "Price ID",
                "displayType": "text",
                "placeholder": "Enter the price ID"
            },
            "name": "price_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment_url}}/prices/{{parameters.price_id}}",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        }
    }
}
