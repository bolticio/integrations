{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "ID (ascending)",
                        "value": "id[ASC]"
                    },
                    {
                        "label": "ID (descending)",
                        "value": "id[DESC]"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Order returned entities (only `id` is supported).",
                "displayName": "Order By",
                "displayType": "select",
                "placeholder": "Select ordering"
            },
            "name": "order_by"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Active",
                        "value": "active"
                    },
                    {
                        "label": "Archived",
                        "value": "archived"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Filter simulations by status.",
                "displayName": "Status",
                "displayType": "select",
                "placeholder": "Select status"
            },
            "name": "status"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Filter simulations created from a specific notification destination (ntfset_*).",
                "displayName": "Notification Setting ID",
                "displayType": "text",
                "placeholder": "ntfset_01gsz8z1q1n00f12qt82y31smh"
            },
            "name": "notification_setting_id"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Comma-separated list of simulation IDs to return (ntfsim_*).",
                "displayName": "ID",
                "displayType": "text",
                "placeholder": "ntfsim_01gsz8z1q1n00f12qt82y31smh,ntfsim_01gsz8z1q1n00f12qt82y31abc"
            },
            "name": "id"
        }
    ],
    "definition": {
        "qs": {
            "id": "{{parameters.id}}",
            "status": "{{parameters.status}}",
            "order_by": "{{parameters.order_by}}",
            "notification_setting_id": "{{parameters.notification_setting_id}}"
        },
        "url": "https://{{secrets.environment_url}}/simulations",
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data.data}}"
        },
        "pagination": {
            "qs": {
                "per_page": 50
            },
            "type": "url",
            "default": {
                "next_url": null,
                "per_page": 50
            },
            "next_url": "{{response.data.meta.pagination.next}}",
            "condition": "{{response.data.meta.pagination.has_more}} !== false"
        }
    }
}
