                            "name": "optional"
                        },
                        {
                            "meta": {
                                "value": false,
                                "options": [
                                    {
                                        "label": "Yes",
                                        "value": true
                                    },
                                    {
                                        "label": "No",
                                        "value": false
                                    }
                                ],
                                "htmlProps": {
                                    "optionsLayout": "row",
