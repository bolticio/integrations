                                "displayName": "Type",
                                "displayType": "text"
                            },
                            "name": "type"
                        },
                        {
                            "meta": {
                                "value": false,
                                "options": [
                                    {
                                        "label": "Yes",
                                        "value": true
                                    },
                                    {
                                        "label": "No",
                                        "value": false
                                    }
                                ],
                                "htmlProps": {
                                    "optionsLayout": "row",
                                    "labelPlacement": "end"
