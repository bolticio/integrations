{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the customer group to retrieve.",
                "displayName": "Customer Group ID",
                "displayType": "number",
                "placeholder": "Enter the customer group ID"
            },
            "name": "id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}/rest/default/V1/customerGroups/default/{{parameters.id}}",
        "method": "put",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
