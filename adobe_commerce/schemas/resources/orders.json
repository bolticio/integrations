{
    "ship": {
        "definition": {
            "url": "https://{{secrets.domain}}/rest/V1/order/{{parameters.order_id}}/ship",
            "body": {},
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": true
                    },
                    "description": "The ID of the order to ship.",
                    "displayName": "Order ID",
                    "displayType": "text",
                    "placeholder": "Enter the Order ID"
                },
                "name": "order_id"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": 1,
                "validation": {
                    "required": false
                },
                "description": "The number of items to retrieve per page.",
                "displayName": "Page Size",
                "displayType": "number",
                "placeholder": "Enter the number of items per page"
            },
            "name": "pageSize"
        }
    ],
    "placeOrder": {
        "definition": {
            "url": "https://{{secrets.domain}}/rest/V1/carts/{{parameters.cartId}}/order",
            "method": "put",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "allowDynamic": true
                    },
                    "validation": {
                        "required": true
                    },
                    "displayName": "Cart ID",
                    "displayType": "text",
                    "placeholder": "Enter the guest cart ID"
                },
                "name": "cartId"
            }
        ]
    },
    "definition": {
        "qs": {
            "searchCriteria[pageSize]": "{{parameters.pageSize}}"
        },
        "url": "https://{{secrets.domain}}/rest/V1/orders",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
