{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the cart into which item to add.",
                "displayName": "Cart ID",
                "displayType": "text",
                "placeholder": "Enter the guest cart ID"
            },
            "name": "cartId"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "SKU of the product to add.",
                "displayName": "Product SKU",
                "displayType": "text",
                "placeholder": "Enter the product SKU"
            },
            "name": "sku"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Quantity of the product.",
                "displayName": "Quantity",
                "displayType": "number",
                "placeholder": "Enter the quantity"
            },
            "name": "qty"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}/rest/default/V1/carts/{{parameters.cartId}}/items",
        "body": {
            "cartItem": {
                "qty": "{{parameters.qty}}",
                "sku": "{{parameters.sku}}",
                "quote_id": "{{parameters.cartId}}"
            }
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
