{
    "parameters": [
        {
            "meta": {
                "value": 1,
                "validation": {
                    "required": false
                },
                "description": "The number of records to retrieve per page.",
                "displayName": "Page Size",
                "displayType": "number",
                "placeholder": "Enter the number of records per page"
            },
            "name": "pageSize"
        }
    ],
    "definition": {
        "qs": {
            "searchCriteria[pageSize]": "{{parameters.pageSize}}"
        },
        "url": "https://{{secrets.domain}}/rest/V1/categories/attributes",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
