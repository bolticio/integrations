{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the country to retrieve.",
                "displayName": "Country ID",
                "displayType": "text",
                "placeholder": "Enter the country ID"
            },
            "name": "countryId"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}/rest/default/V1/directory/countries/{{parameters.countryId}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
