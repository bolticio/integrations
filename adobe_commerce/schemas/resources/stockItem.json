{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The SKU of the product to retrieve stock information for.",
                "displayName": "Product SKU",
                "displayType": "text",
                "placeholder": "Enter the product SKU"
            },
            "name": "productSku"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}/rest/default/V1/stockItems/{{parameters.productSku}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
