{
    "definition": {
        "url": "https://{{secrets.domain}}/rest/default/V1/shipment/{{parameters.id}}/emails",
        "body": {
            "email": "{{parameters.email}}"
        },
        "method": "post",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    },
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the shipment to send an email for.",
                "displayName": "Shipment ID",
                "displayType": "text",
                "placeholder": "Enter the shipment ID"
            },
            "name": "id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The email address to send the shipment details to.",
                "displayName": "Email",
                "displayType": "text",
                "placeholder": "Enter the email address"
            },
            "name": "email"
        }
    ]
}
