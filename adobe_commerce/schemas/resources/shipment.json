{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the shipment to add a comment to.",
                "displayName": "Shipment ID",
                "displayType": "text",
                "placeholder": "Enter the shipment ID"
            },
            "name": "id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The comment to add to the shipment.",
                "displayName": "Comment",
                "displayType": "textarea",
                "placeholder": "Enter your comment"
            },
            "name": "comment"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}/rest/default/V1/shipment/{{parameters.id}}/comments",
        "body": {
            "entity": {
                "comment": "{{parameters.comment}}",
                "entity_id": "{{parameters.id}}",
                "parent_id": "{{parameters.id}}"
            }
        },
        "method": "post",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
