{
    "api_key": {
        "validate": {
            "url": "https://graph.facebook.com/facebook/picture?redirect=false",
            "method": "get",
            "headers": {
                "Accept": "application/json",
                "facebook-api-key": "Bearer {{secrets.api_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Please add the api token"
                        }
                    },
                    "description": "Your Facebook    API Key. Refer to the <a href='https://developers.facebook.com/docs/graph-api/overview#access-tokens' target='_blank'>Facebook API documentation</a> for details.",
                    "displayName": "API token",
                    "displayType": "password",
                    "placeholder": "Enter API token",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_token"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": "api_key",
                "options": [
                    {
                        "label": "API Key",
                        "value": "api_key"
                    }
                ],
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Please select the authentication type"
                    }
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
