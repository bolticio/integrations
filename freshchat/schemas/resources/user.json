{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "ID of the user to retrieve",
                "displayName": "User ID",
                "displayType": "number",
                "placeholder": "Enter the User ID"
            },
            "name": "user_id"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Link from which the image is fetched.",
                "displayName": "URL",
                "displayType": "text",
                "placeholder": "Enter the image URL"
            },
            "name": "url"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Email address of the user.",
                "displayName": "Email",
                "displayType": "text",
                "placeholder": "Enter the email"
            },
            "name": "email"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "First name of the user.",
                "displayName": "First Name",
                "displayType": "text",
                "placeholder": "Enter the first name"
            },
            "name": "first_name"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Last name of the user.",
                "displayName": "Last Name",
                "displayType": "text",
                "placeholder": "Enter the last name"
            },
            "name": "last_name"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Login Status of the user.",
                "displayName": "Login Status",
                "displayType": "toggle",
                "placeholder": "Enter the Login Status"
            },
            "name": "login_status"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Org Contact ID of the user.",
                "displayName": "Org Contact ID",
                "displayType": "text",
                "placeholder": "Enter the Org Contact ID"
            },
            "name": "org_contact_id"
        },
        {
            "meta": {
                "htmlProps": {
                    "disabled": false,
                    "readOnly": false,
                    "continents": [
                        "NA",
                        "SA",
                        "AS",
                        "OC",
                        "AF",
                        "EU"
                    ],
                    "defaultCountry": "IN"
                },
                "validation": {
                    "required": false
                },
                "description": "Phone number of the user.",
                "displayName": "Phone",
                "displayType": "phone",
                "placeholder": "Enter the phone number"
            },
            "name": "phone"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Name of the custom property.",
                "displayName": "Name",
                "displayType": "text"
            },
            "name": "name"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Value of the custom property.",
                "displayName": "Value",
                "displayType": "text"
            },
            "name": "value"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "User identifier the system sets for a user when Freshchat is integrated with our Customer Experience suite of products.",
                "displayName": "Reference ID",
                "displayType": "text",
                "placeholder": "Enter the reference ID"
            },
            "name": "reference_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.domain}}.freshchat.com/v2/users/{{parameters.user_id}}",
        "body": {
            "email": "{{parameters.email}}",
            "phone": "{{parameters.phone}}",
            "avatar": {
                "url": "{{parameters.url}}"
            },
            "last_name": "{{parameters.last_name}}",
            "first_name": "{{parameters.first_name}}",
            "properties": [
                {
                    "name": "{{properties.name}}",
                    "value": "{{properties.value}}"
                }
            ],
            "login_status": "{{parameters.login_status}}",
            "reference_id": "{{parameters.reference_id}}",
            "org_contact_id": "{{parameters.org_contact_id}}"
        },
        "method": "put",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.data.code}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
