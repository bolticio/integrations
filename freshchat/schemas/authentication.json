{
    "api_key": {
        "validate": {
            "url": "https://{{secrets.domain}}.freshchat.com/v2/accounts/configuration",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.api_key}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errorMessage}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Domain is required"
                        }
                    },
                    "description": "The domain in the Freshchat CRM org URL. For example, in <a href='https://boltic.freshchat.com/v2' target='_blank'>https://boltic.freshchat.com/v2</a>, the domain is boltic.",
                    "displayName": "Domain",
                    "displayType": "text",
                    "placeholder": "Enter Domain",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "domain"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "API key is required"
                        }
                    },
                    "description": "Refer to the <a href='https://developers.freshchat.com/api/#authentication' target='blank'>Freshchat API authenticaton documentation</a> for detailed instructions on getting your API key.",
                    "displayName": "API Key",
                    "displayType": "password",
                    "placeholder": "Enter API Key",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "api_key",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_key"
            }
        ]
    },
    "parameters": [
        {
            "meta": {
                "value": "api_key",
                "options": [
                    {
                        "label": "API Key",
                        "value": "api_key"
                    }
                ],
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Authentication type is required"
                    }
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ]
}
