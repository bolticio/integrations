{
    "parameters": [
        {
            "meta": {
                "value": "access_token",
                "options": [
                    {
                        "label": "Access Token",
                        "value": "access_token"
                    }
                ],
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Authentication type is a mandatory field"
                    }
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ],
    "access_token": {
        "token": {
            "url": "https://login.{{secrets.environment}}.com/connect/token",
            "body": {
                "scope": "kekaapi",
                "api_key": "{{secrets.api_key}}",
                "client_id": "{{secrets.client_id}}",
                "grant_type": "kekaapi",
                "client_secret": "{{secrets.client_secret}}"
            },
            "method": "post",
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/x-www-form-urlencoded"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "refresh": {
            "qs": {
                "grant_type": "refresh_token"
            },
            "url": "https://login.{{secrets.environment}}.com/connect/token",
            "body": {
                "scope": "kekaapi",
                "api_key": "{{secrets.api_key}}",
                "client_id": "{{secrets.client_id}}",
                "grant_type": "kekaapi",
                "client_secret": "{{secrets.client_secret}}"
            },
            "method": "post",
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/x-www-form-urlencoded"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "validate": {
            "url": "https://login.{{secrets.environment}}.com/connect/token?grant_type=refresh_token",
            "body": {
                "scope": "kekaapi",
                "api_key": "{{secrets.api_key}}",
                "client_id": "{{secrets.client_id}}",
                "grant_type": "kekaapi",
                "client_secret": "{{secrets.client_secret}}"
            },
            "method": "post",
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/x-www-form-urlencoded"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Company is a required field"
                        }
                    },
                    "description": "Company name is the subdomain of your Keka account. For example, if your Keka account URL is https://mycompany.keka.com, then your company name is mycompany.",
                    "displayName": "Company",
                    "displayType": "text",
                    "placeholder": "Enter your company name",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "company"
            },
            {
                "meta": {
                    "options": [
                        {
                            "label": "Keka",
                            "value": "keka"
                        },
                        {
                            "label": "Keka Demo",
                            "value": "kekademo"
                        }
                    ],
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Environment is a required field"
                        }
                    },
                    "description": "Environment refers to a specific instance of the platform, such as kekademo for testing and training with mock data, or keka for live operations with real employee and company data.",
                    "displayName": "Environment",
                    "displayType": "select",
                    "placeholder": "Please select your keka environment",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "environment"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Client ID is a required field"
                        }
                    },
                    "description": "To access client ID, users must navigate to Global admin settings -> Integrations & Automations -> API access -> Client ID",
                    "displayName": "Client ID",
                    "displayType": "text",
                    "placeholder": "Enter your client ID",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "client_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Client Secret is a required field"
                        }
                    },
                    "description": "To access client secret, users must navigate to Global admin settings -> Integrations & Automations -> API access -> Client secret",
                    "displayName": "Client Secret",
                    "displayType": "password",
                    "placeholder": "Enter your client secret",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "client_secret"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "API key is a required field"
                        }
                    },
                    "description": "To access API keys, users must navigate to Global admin settings -> Integrations & Automations -> API access -> API key",
                    "displayName": "API Key",
                    "displayType": "password",
                    "placeholder": "Enter your API key",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "api_key"
            }
        ]
    }
}
