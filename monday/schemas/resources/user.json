{
    "getUsers": {
        "definition": {
            "url": "https://api.monday.com/v2",
            "body": {},
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors[0].message}}"
                },
                "output": "{{response.data.data.users}}"
            },
            "transform": {
                "body": "return JSON.stringify({ query: `{ users { id name } }` })"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "monday",
                        "secret": "{{parameters.secret}}",
                        "resource": "user",
                        "operation": "user.get_user_details",
                        "loadOptionsMethod": "getUsers"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "Select the user whose details needs to be fetched.",
                "displayName": "User",
                "displayType": "select",
                "placeholder": "Select an user"
            },
            "name": "user_id"
        }
    ],
    "definition": {
        "url": "https://api.monday.com/v2",
        "body": {},
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors[0].message}}"
            },
            "output": "{{response.data}}"
        },
        "transform": {
            "body": "return JSON.stringify({ query: `query { users (ids: [{{parameters.user_id}}]) { id name email title teams { id name } } }` })"
        }
    }
}
