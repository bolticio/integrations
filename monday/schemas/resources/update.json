{
    "getBoard": {
        "definition": {
            "url": "https://api.monday.com/v2",
            "body": {},
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors[0].message}}"
                },
                "output": "{{response.data.data.boards}}"
            },
            "transform": {
                "body": "return JSON.stringify({ query: `{ boards { id name } }` })"
            }
        }
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "monday",
                        "secret": "{{parameters.secret}}",
                        "resource": "update",
                        "operation": "update.create",
                        "loadOptionsMethod": "getBoard"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "Board containing the work item that will receive the update/comment",
                "displayName": "Board ",
                "displayType": "select",
                "placeholder": "Select a board"
            },
            "name": "board_id"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "monday",
                        "secret": "{{parameters.secret}}",
                        "board_id": "{{parameters.board_id}}",
                        "resource": "update",
                        "operation": "update.create",
                        "loadOptionsMethod": "getBoardItems"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "id",
                    "condition": "{{parameters.board_id}}"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": false
                },
                "description": "Specific work item that will receive the status update/comment",
                "displayName": "Item",
                "displayType": "select",
                "placeholder": "Select an item",
                "dependencies": {
                    "conditions": [
                        {
                            "field": "board_id",
                            "operator": "NOT_EMPTY"
                        }
                    ]
                }
            },
            "name": "item_id"
        },
        {
            "meta": {
                "readOnly": false,
                "htmlProps": {
                    "maxRows": 4,
                    "minRows": 4
                },
                "validation": {
                    "required": true,
                    "maxLength": 300,
                    "minLength": 3,
                    "requiredDetail": {
                        "errorMsg": "Body is a required field"
                    }
                },
                "description": "Update to be posted",
                "displayName": "Body",
                "displayType": "textarea",
                "placeholder": "Body of the update"
            },
            "name": "body"
        }
    ],
    "getBoardItems": {
        "definition": {
            "url": "https://api.monday.com/v2",
            "body": "{{parameters}}",
            "method": "post",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "{{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors[0].message}}"
                },
                "output": "{{response.data.data.boards[0].items_page.items}}"
            },
            "transform": {
                "body": "return JSON.stringify({ query: `{ boards (ids: {{parameters.board_id}} ) { name items_page { items { id name } } } }` })"
            }
        }
    },
    "definition": {
        "url": "https://api.monday.com/v2",
        "body": "{{parameters}}",
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "{{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.errors[0].message}}"
            },
            "output": "{{response.data}}"
        },
        "transform": {
            "body": "return JSON.stringify({ query: `mutation { create_update (item_id: {{parameters.item_id}}, body: \"{{parameters.body}}\" ) { id } }` })"
        }
    }
}
