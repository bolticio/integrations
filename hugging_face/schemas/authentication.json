{
    "parameters": [
        {
            "meta": {
                "value": "access_token",
                "options": [
                    {
                        "label": "Access Token",
                        "value": "access_token"
                    }
                ],
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "hidden",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ],
    "access_token": {
        "validate": {
            "url": "https://huggingface.co/api/whoami-v2",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetails": {
                            "errorMsg": "Access Token is required."
                        }
                    },
                    "description": "Refer to the <a href='https://huggingface.co/docs/hub/en/security-tokens' target='blank'>Hugging Face authenticaton documentation</a> for detailed instructions on getting your Access Token.",
                    "displayName": "Access Token",
                    "displayType": "password",
                    "placeholder": "Enter Access Token",
                    "dependencies": {
                        "conditions": [
                            {
                                "field": "type",
                                "value": "access_token",
                                "operator": "EQUALS"
                            }
                        ]
                    }
                },
                "name": "access_token"
            }
        ]
    }
}
