{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "Google/gemma-2-2b-it",
                        "value": "google/gemma-2-2b-it"
                    },
                    {
                        "label": "Meta-llama/Meta-Llama-3.1-8B-Instruct",
                        "value": "meta-llama/Meta-Llama-3.1-8B-Instruct"
                    },
                    {
                        "label": "Microsoft/Phi-3-mini-4k-instruct",
                        "value": "microsoft/Phi-3-mini-4k-instruct"
                    },
                    {
                        "label": "Qwen/Qwen2.5-7B-Instruct",
                        "value": "qwen/Qwen2.5-7B-Instruct"
                    },
                    {
                        "label": "Meta-llama/Llama-3.2-11B-Vision-Instruct",
                        "value": "meta-llama/Llama-3.2-11B-Vision-Instruct"
                    },
                    {
                        "label": "Qwen/Qwen2-VL-7B-Instruct",
                        "value": "qwen/Qwen2-VL-7B-Instruct"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "Select the model for Chat completion.",
                "displayName": "Models",
                "displayType": "select",
                "placeholder": "Select a model"
            },
            "name": "model"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Eg. What is the capital of France?",
                "displayName": "Content",
                "displayType": "textarea",
                "placeholder": "Enter the content of the message"
            },
            "name": "content"
        }
    ],
    "getModelsSummarization": {
        "definition": {
            "url": "https://huggingface.co/api/models?filter=summarization&sort=downloads",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data}}"
            }
        }
    },
    "getModelsClassification": {
        "definition": {
            "url": "https://huggingface.co/api/models?filter=text-classification&sort=downloads",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data}}"
            }
        }
    },
    "getTextGenerationModels": {
        "definition": {
            "url": "https://huggingface.co/api/models?filter=text-generation&sort=downloads",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors}}"
                },
                "output": "{{response.data}}"
            }
        }
    },
    "definition": {
        "url": "https://api-inference.huggingface.co/models/{{parameters.model}}/v1/chat/completions",
        "body": {
            "model": "{{parameters.model}}",
            "stream": false,
            "messages": [
                {
                    "role": "user",
                    "content": "{{parameters.content}}"
                }
            ],
            "max_tokens": "500"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    }
}
