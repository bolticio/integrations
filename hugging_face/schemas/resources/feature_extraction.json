{
    "definition": {
        "url": "https://api-inference.huggingface.co/models/{{parameters.models}}",
        "body": {
            "inputs": "{{parameters.text}}"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    },
    "parameters": [
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "hugging_face",
                        "secret": "{{parameters.secret}}",
                        "resource": "text_functions",
                        "operation": "text_functions.classify",
                        "loadOptionsMethod": "getModelsClassification"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "modelId",
                    "valueKey": "modelId"
                },
                "options": [],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "Select the model for classification.",
                "displayName": "Models",
                "displayType": "autocomplete",
                "placeholder": "Select a model"
            },
            "name": "models"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Provide the text for classification.",
                "displayName": "Text to Classify",
                "displayType": "text",
                "placeholder": "Enter the text to classify"
            },
            "name": "text"
        }
    ]
}
