{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the campaign_id",
                "displayName": "Campaign Id",
                "displayType": "text",
                "placeholder": "Enter the campaign_id"
            },
            "name": "campaign_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the recipient's email address.",
                "displayName": "Email",
                "displayType": "text",
                "placeholder": "Enter the email"
            },
            "name": "email"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the subject line for the email.",
                "displayName": "Subject",
                "displayType": "text",
                "placeholder": "Enter the subject"
            },
            "name": "subject"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the reply-to email address.",
                "displayName": "Reply To",
                "displayType": "text",
                "placeholder": "Enter the reply-to email"
            },
            "name": "replyTo"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Enter the name of the sender.",
                "displayName": "From Name",
                "displayType": "text",
                "placeholder": "Enter the sender's name"
            },
            "name": "fromName"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Enter the recipient's first name.",
                "displayName": "First Name",
                "displayType": "text",
                "placeholder": "Enter the first name"
            },
            "name": "first_name"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Enter the transient variable data for the campaign.",
                "displayName": "Transient Variable",
                "displayType": "text",
                "placeholder": "Enter the transient variable"
            },
            "name": "transient_variable"
        },
        {
            "meta": {
                "validation": {
                    "required": false
                },
                "description": "Enter the name of the list to add the recipient.",
                "displayName": "Add To List",
                "displayType": "text",
                "placeholder": "Enter the list name"
            },
            "name": "addToList"
        }
    ],
    "definition": {
        "qs": {},
        "url": "https://api.mailmodo.com/api/v1/triggerCampaign/{{parameters.campaign_id}}",
        "body": {
            "data": {
                "first_name": "{{parameters.first_name}}"
            },
            "email": "{{parameters.email}}",
            "replyTo": "{{parameters.replyTo}}",
            "subject": "{{parameters.subject}}",
            "fromName": "{{parameters.fromName}}",
            "addToList": "{{parameters.addToList}}",
            "campaign_data": {
                "transient_variable": "{{parameters.transient_variable}}"
            }
        },
        "method": "post",
        "headers": {
            "Accept": "application/json",
            "mmApiKey": "{{secrets.api_key}}",
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
