{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "pattern": "^[0-9]+$",
                    "required": true
                },
                "description": "The ID of the task to delete.",
                "displayName": "Task ID",
                "displayType": "text",
                "placeholder": "Enter the task ID"
            },
            "name": "task_id"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/Tasks/{{parameters.task_id}}",
        "method": "delete",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
