{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the sales order to update.",
                "displayName": "Sales Order ID",
                "displayType": "text",
                "placeholder": "Enter the sales order ID"
            },
            "name": "sales_order_id"
        },
        {
            "meta": {
                "description": "The subject line of the sales order.",
                "displayName": "Subject",
                "displayType": "text",
                "placeholder": "Enter the subject"
            },
            "name": "subject"
        },
        {
            "meta": {
                "description": "The ID of the account associated with the sales order.",
                "displayName": "Account ID",
                "displayType": "text",
                "placeholder": "Enter the account ID"
            },
            "name": "account_id"
        },
        {
            "meta": {
                "description": "The ID of the contact associated with the sales order.",
                "displayName": "Contact ID",
                "displayType": "text",
                "placeholder": "Enter the contact ID"
            },
            "name": "contact_id"
        },
        {
            "meta": {
                "description": "The ID of the deal associated with the sales order.",
                "displayName": "Deal ID",
                "displayType": "text",
                "placeholder": "Enter the deal ID"
            },
            "name": "deal_id"
        },
        {
            "meta": {
                "description": "The ID of the quote associated with the sales order.",
                "displayName": "Quote ID",
                "displayType": "text",
                "placeholder": "Enter the quote ID"
            },
            "name": "quote_id"
        },
        {
            "meta": {
                "description": "An array of product details for the sales order.",
                "displayName": "Product Details",
                "displayType": "json",
                "placeholder": "Enter the product details"
            },
            "name": "product_details"
        },
        {
            "meta": {
                "description": "The due date for the sales order.",
                "displayName": "Due Date",
                "displayType": "date",
                "placeholder": "Enter the due date"
            },
            "name": "due_date"
        },
        {
            "meta": {
                "description": "The name of the carrier for shipping.",
                "displayName": "Carrier",
                "displayType": "text",
                "placeholder": "Enter the carrier name"
            },
            "name": "carrier"
        },
        {
            "meta": {
                "options": [
                    {
                        "label": "Created",
                        "value": "Created"
                    },
                    {
                        "label": "Approved",
                        "value": "Approved"
                    },
                    {
                        "label": "Delivered",
                        "value": "Delivered"
                    },
                    {
                        "label": "Cancelled",
                        "value": "Cancelled"
                    }
                ],
                "description": "The status of the sales order.",
                "displayName": "Status",
                "displayType": "select",
                "placeholder": "Select the status"
            },
            "name": "status"
        },
        {
            "meta": {
                "description": "A description of the sales order.",
                "displayName": "Description",
                "displayType": "text",
                "placeholder": "Enter the description"
            },
            "name": "description"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/Sales_Orders/{{parameters.sales_order_id}}",
        "body": {
            "data": [
                {
                    "Status": "{{parameters.status}}",
                    "Carrier": "{{parameters.carrier}}",
                    "Subject": "{{parameters.subject}}",
                    "Due_Date": "{{parameters.due_date}}",
                    "Deal_Name": {
                        "id": "{{parameters.deal_id}}"
                    },
                    "Quote_Name": {
                        "id": "{{parameters.quote_id}}"
                    },
                    "Description": "{{parameters.description}}",
                    "Account_Name": {
                        "id": "{{parameters.account_id}}"
                    },
                    "Contact_Name": {
                        "id": "{{parameters.contact_id}}"
                    },
                    "Product_Details": "{{parameters.product_details}}"
                }
            ]
        },
        "method": "put",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
