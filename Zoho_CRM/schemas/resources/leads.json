{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "pattern": "^[0-9]+$",
                    "required": true
                },
                "description": "The ID of the lead to retrieve.",
                "displayName": "Lead ID",
                "displayType": "text",
                "placeholder": "Enter the lead ID"
            },
            "name": "lead_id"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/Leads/{{parameters.lead_id}}",
        "method": "get",
        "headers": {
            "Authorization": "Zoho-oauthtoken {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
