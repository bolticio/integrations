{
    "parameters": [
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": false
                },
                "validation": {
                    "pattern": "^[0-9]+$",
                    "required": true
                },
                "description": "The ID of the account to retrieve.",
                "displayName": "Account ID",
                "displayType": "text",
                "placeholder": "Enter the account ID"
            },
            "name": "account_id"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/Accounts/{{parameters.account_id}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
