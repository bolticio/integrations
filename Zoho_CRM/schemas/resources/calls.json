{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "pattern": "^[0-9]+$",
                    "required": true
                },
                "description": "The ID of the call to retrieve.",
                "displayName": "Call ID",
                "displayType": "text",
                "placeholder": "Enter the call ID"
            },
            "name": "call_id"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/Calls/{{parameters.call_id}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
