{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "Leads",
                        "value": "Leads"
                    },
                    {
                        "label": "Contacts",
                        "value": "Contacts"
                    },
                    {
                        "label": "Deals",
                        "value": "Deals"
                    }
                ],
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "Select the module to which the note will be attached.",
                "displayName": "Related Module",
                "displayType": "select",
                "placeholder": "Select a module"
            },
            "name": "parent_module"
        },
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "The ID of the record to which the note will be attached.",
                "displayName": "Record ID",
                "displayType": "text",
                "placeholder": "Enter the record ID"
            },
            "name": "record_id"
        },
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": true
                },
                "description": "The title of the note.",
                "displayName": "Note Title",
                "displayType": "text",
                "placeholder": "Enter the note title"
            },
            "name": "note_title"
        },
        {
            "meta": {
                "htmlProps": {
                    "allowDynamic": true
                },
                "validation": {
                    "required": true
                },
                "description": "The content of the note.",
                "displayName": "Note Content",
                "displayType": "textarea",
                "placeholder": "Enter the note content"
            },
            "name": "note_content"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/{{parameters.parent_module}}/{{parameters.record_id}}/Notes",
        "body": {
            "data": [
                {
                    "Note_Title": "{{parameters.note_title}}",
                    "Note_Content": "{{parameters.note_content}}"
                }
            ]
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
