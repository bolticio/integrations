{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The ID of the price book to retrieve.",
                "displayName": "Price Book ID",
                "displayType": "text",
                "placeholder": "Enter the price book ID"
            },
            "name": "price_book_id"
        }
    ],
    "definition": {
        "url": "https://www.zohoapis.in/crm/v2/Price_Books/{{parameters.price_book_id}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
