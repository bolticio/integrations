{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The unique ID for the number.",
                "displayName": "Number ID",
                "displayType": "text",
                "placeholder": "Enter the Number ID"
            },
            "name": "number_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The updated name for the number.",
                "displayName": "Name",
                "displayType": "text",
                "placeholder": "Enter the name"
            },
            "name": "name"
        }
    ],
    "definition": {
        "url": "https://api.aircall.io/v1/numbers/{{parameters.number_id}}",
        "body": {
            "name": "{{parameters.name}}"
        },
        "method": "put",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Basic convertBufferBase64String({{secrets.api_id}}:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
