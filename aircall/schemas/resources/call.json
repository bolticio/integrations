{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The unique ID for the call.",
                "displayName": "Call ID",
                "displayType": "text",
                "placeholder": "Enter the Call ID"
            },
            "name": "call_id"
        }
    ],
    "definition": {
        "url": "https://api.aircall.io/v1/calls/{{parameters.call_id}}",
        "method": "get",
        "headers": {
            "Authorization": "Basic convertBufferBase64String({{secrets.api_id}}:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
