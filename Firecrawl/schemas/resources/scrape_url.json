{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Batch Scrape ID is required field"
                    }
                },
                "description": "The ID of the Batch Scrape job to check status for.",
                "displayName": "Batch Scrape ID",
                "displayType": "text",
                "placeholder": "Enter Batch Scrape ID"
            },
            "name": "batch_id"
        }
    ],
    "definition": {
        "url": "https://api.firecrawl.dev/v1/batch/scrape/{{parameters.batch_id}}",
        "method": "get",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
