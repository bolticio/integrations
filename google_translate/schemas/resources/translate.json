{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The text to translate.",
                "displayName": "Text",
                "displayType": "text",
                "placeholder": "Enter the text to be translated"
            },
            "name": "q"
        },
        {
            "meta": {
                "config": {
                    "url": "integrations/options",
                    "body": {
                        "name": "google_translate",
                        "secret": "{{parameters.secret}}",
                        "resource": "translate",
                        "operation": "translate.translates",
                        "loadOptionsMethod": "getLanguages"
                    },
                    "method": "post",
                    "urlType": "options",
                    "labelKey": "name",
                    "valueKey": "language"
                },
                "options": [],
                "validation": {
                    "required": true
                },
                "description": "The target language.",
                "displayName": "Target Language",
                "displayType": "select",
                "placeholder": "Select the target language"
            },
            "name": "target"
        }
    ],
    "getLanguages": {
        "definition": {
            "url": "https://translation.googleapis.com/language/translate/v2/languages?key={{secrets.api_key}}&target=en",
            "method": "get",
            "headers": {
                "Content-Type": "application/json"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error.message}}"
                },
                "output": "{{response.data.data.languages}}"
            }
        }
    },
    "definition": {
        "url": "https://translation.googleapis.com/language/translate/v2?key={{secrets.api_key}}",
        "body": {
            "q": "{{parameters.q}}",
            "target": "{{parameters.target}}"
        },
        "method": "post",
        "headers": {
            "Content-Type": "application/json"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
