{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the ID given by Zendesk of the phone number you want to create a callback request for.",
                "displayName": "Phone Number ID",
                "displayType": "text",
                "placeholder": "Enter Phone Number ID "
            },
            "name": "phone_number_id"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Requester Phone Number for the callback request.",
                "displayName": "Requester Phone Number",
                "displayType": "text",
                "placeholder": "Enter Requester Phone Number"
            },
            "name": "requester_phone_number"
        }
    ],
    "definition": {
        "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/channels/voice/callback_requests",
        "body": {
            "data": "{{secrets}}",
            "callback_request": {
                "phone_number_id": "{{parameters.phone_number_id}}",
                "requester_phone_number": "{{parameters.requester_phone_number}}"
            }
        },
        "method": "post",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Basic convertBufferBase64String({{secrets.email}}/token:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.data.description}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    }
}
