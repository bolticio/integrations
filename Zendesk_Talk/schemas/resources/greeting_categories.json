{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the ID given by the Zendesk of the greeting categories you want to get details of.",
                "displayName": "Greeting Categories ID",
                "displayType": "text",
                "placeholder": "Enter Greeting Categories ID"
            },
            "name": "greeting_categories_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/channels/voice/greeting_categories/{{parameters.greeting_categories_id}}",
        "body": {
            "data": "{{secrets}}",
            "greeting_categories_id": "{{parameters.greeting_categories_id}}"
        },
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Basic convertBufferBase64String({{secrets.email}}/token:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.data.description}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    }
}
