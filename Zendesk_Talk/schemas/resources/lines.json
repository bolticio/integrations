{
    "definition": {
        "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/channels/voice/addresses/{{parameters.address_id}}",
        "body": {
            "data": "{{secrets}}",
            "address_id": "{{parameters.address_id}}"
        },
        "method": "get",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Basic convertBufferBase64String({{secrets.email}}/token:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.data.description}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    },
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the ID given by the Zendesk.",
                "displayName": "Address ID",
                "displayType": "text",
                "placeholder": "Enter Address ID"
            },
            "name": "address_id"
        }
    ]
}
