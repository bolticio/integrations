{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Name of the IVR.",
                "displayName": "Name",
                "displayType": "text",
                "placeholder": "Enter the Name"
            },
            "name": "name"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the ID given by Zendesk of the IVR you want to update details of.",
                "displayName": "IVR ID",
                "displayType": "text",
                "placeholder": "Enter IVR ID"
            },
            "name": "ivr_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/channels/voice/ivr/{{parameters.ivr_id}}",
        "body": {
            "ivr": {
                "name": "{{parameters.name}}"
            },
            "data": "{{secrets}}",
            "ivr_id": "{{parameters.ivr_id}}"
        },
        "method": "put",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Basic convertBufferBase64String({{secrets.email}}/token:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.data.description}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    }
}
