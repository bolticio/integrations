{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Name of the address.",
                "displayName": "Name",
                "displayType": "text",
                "placeholder": "Enter the Name"
            },
            "name": "name"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Street Address of the address.",
                "displayName": "Street Address",
                "displayType": "text",
                "placeholder": "Enter the Street Address"
            },
            "name": "street"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Zip Code of the address.",
                "displayName": "Zip Code",
                "displayType": "text",
                "placeholder": "Enter the Zip Code"
            },
            "name": "zip"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Province of the address.",
                "displayName": "Province",
                "displayType": "text",
                "placeholder": "Enter the Province"
            },
            "name": "province"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the Country Code of the address.",
                "displayName": "Country Code",
                "displayType": "text",
                "placeholder": "Enter the Country Code"
            },
            "name": "country_code"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the City of the address.",
                "displayName": "City",
                "displayType": "text",
                "placeholder": "Enter the City"
            },
            "name": "city"
        },
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the State of the address.",
                "displayName": "State",
                "displayType": "text",
                "placeholder": "Enter the State"
            },
            "name": "state"
        }
    ],
    "definition": {
        "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/channels/voice/addresses",
        "body": {
            "data": "{{secrets}}",
            "address": {
                "zip": "{{parameters.zip}}",
                "city": "{{parameters.city}}",
                "name": "{{parameters.name}}",
                "state": "{{parameters.state}}",
                "street": "{{parameters.street}}",
                "province": "{{parameters.province}}",
                "country_code": "{{parameters.country_code}}"
            }
        },
        "method": "post",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Basic convertBufferBase64String({{secrets.email}}/token:{{secrets.api_token}})"
        },
        "response": {
            "error": {
                "code": "{{response.data.description}}",
                "message": "{{response.data.error}}"
            },
            "output": "{{response.data}}"
        }
    }
}
