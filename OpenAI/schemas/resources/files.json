{
    "name": "files",
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "File ID is required field"
                    }
                },
                "description": "The ID of the file to retrieve.",
                "displayName": "File ID",
                "displayType": "text",
                "placeholder": "Enter a file id"
            },
            "name": "fileId"
        }
    ],
    "definition": {
        "url": "https://api.openai.com/v1/files/{{parameters.fileId}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.api_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
