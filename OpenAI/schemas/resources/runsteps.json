{
    "name": "runsteps",
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Thread ID is required field"
                    }
                },
                "description": "The ID of the thread to which the run and run step belongs.",
                "displayName": "Thread ID",
                "displayType": "text",
                "placeholder": "Enter a thread id"
            },
            "name": "threadId"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Run ID is required field"
                    }
                },
                "description": "The ID of the run to which the run step belongs.",
                "displayName": "Run ID",
                "displayType": "text",
                "placeholder": "Enter a run id"
            },
            "name": "runId"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Step ID is required field"
                    }
                },
                "description": "The ID of the run step to retrieve.",
                "displayName": "Step ID",
                "displayType": "text",
                "placeholder": "Enter a step id"
            },
            "name": "stepId"
        }
    ],
    "definition": {
        "url": "https://api.openai.com/v1/threads/{{parameters.threadId}}/runs/{{parameters.runId}}/steps/{{parameters.stepId}}",
        "method": "get",
        "headers": {
            "OpenAI-Beta": "assistants=v2",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
