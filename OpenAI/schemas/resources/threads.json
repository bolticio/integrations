{
    "name": "threads",
    "parameters": [
        {
            "meta": {
                "validation": {
                    "max": 256,
                    "required": true
                },
                "description": "The ID of the thread to modify.",
                "displayName": "Thread ID",
                "displayType": "text",
                "placeholder": "Enter a thread id"
            },
            "name": "threadId"
        },
        {
            "meta": {
                "validation": {
                    "required": false,
                    "maxLength": 512
                },
                "description": "The description of the assistant. The maximum length is 512 characters.",
                "displayName": "Description",
                "displayType": "textarea",
                "placeholder": "Enter a Descriptions"
            },
            "name": "description"
        },
        {
            "meta": {
                "validation": {
                    "required": false,
                    "maxLength": 256000
                },
                "description": "The system instructions that the assistant uses. The maximum length is 256,000 characters.",
                "displayName": "Instructions",
                "displayType": "textarea",
                "placeholder": "Enter Instructions"
            },
            "name": "instructions"
        },
        {
            "meta": {
                "value": [],
                "children": [
                    {
                        "meta": {
                            "options": [
                                {
                                    "label": "Code interpreter tool",
                                    "value": "code_interpreter"
                                },
                                {
                                    "label": "FileSearch tool",
                                    "value": "file_search"
                                }
                            ],
                            "htmlProps": {
                                "allowDynamic": true
                            },
                            "description": "Tools can be of types code_interpreter or file_search.",
                            "displayName": "Type of tool",
                            "displayType": "select",
                            "placeholder": "Select the type of tool"
                        },
                        "name": "type"
                    }
                ],
                "validation": {
                    "required": false
                },
                "description": "A list of tool enabled on the assistant. There can be a maximum of 128 tools per assistant.",
                "displayName": "Tools",
                "displayType": "array"
            },
            "name": "tools"
        }
    ],
    "getAllModels": {
        "definition": {
            "url": "https://api.openai.com/v1/models",
            "method": "get",
            "headers": {
                "content-type": "application/json",
                "Authorization": "Bearer {{secrets.api_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error.message}}"
                },
                "output": "{{response.data.data}}"
            }
        },
        "parameters": []
    },
    "definition": {
        "url": "https://api.openai.com/v1/threads/{{parameters.threadId}}",
        "body": {
            "bytes": "{{parameters.numberOfBytes}}",
            "purpose": "{{parameters.purpose}}",
            "filename": "{{parameters.fileName}}",
            "mime_type": "{{parameters.mimeType}}"
        },
        "method": "post",
        "headers": {
            "OpenAI-Beta": "assistants=v2",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
