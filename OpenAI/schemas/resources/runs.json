{
    "name": "runs",
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Assistant ID is required field"
                    }
                },
                "description": "The ID of the assistant to use to execute this run.",
                "displayName": "Assistant ID",
                "displayType": "text",
                "placeholder": "Enter an assistant id"
            },
            "name": "assistant_id"
        },
        {
            "meta": {
                "children": [
                    {
                        "meta": {
                            "value": "user",
                            "options": [
                                {
                                    "label": "User",
                                    "value": "user"
                                },
                                {
                                    "label": "Assistnat",
                                    "value": "assistant"
                                }
                            ],
                            "htmlProps": {
                                "allowDynamic": true
                            },
                            "validation": {
                                "required": true
                            },
                            "description": "Role of the message sender (e.g., user, assistant).",
                            "displayName": "Role",
                            "displayType": "select"
                        },
                        "name": "role"
                    },
                    {
                        "meta": {
                            "validation": {
                                "required": true
                            },
                            "description": "Content of the message.",
                            "displayName": "Content",
                            "displayType": "textarea",
                            "placeholder": "Enter message content."
                        },
                        "name": "content"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "List of message objects, each with a 'role' and 'content'.",
                "displayName": "Messages",
                "displayType": "array"
            },
            "name": "messages"
        }
    ],
    "definition": {
        "url": "https://api.openai.com/v1/threads/runs",
        "body": {
            "thread": {
                "messages": "{{parameters.messages}}"
            },
            "assistant_id": "{{parameters.assistant_id}}"
        },
        "method": "post",
        "headers": {
            "OpenAI-Beta": "assistants=v2",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.error.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
