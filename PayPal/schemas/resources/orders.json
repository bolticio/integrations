{
    "get": {
        "definition": {
            "url": "https://{{secrets.environment}}.paypal.com/v2/checkout/orders/{{parameters.order_id}}",
            "method": "GET",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "Unique PayPal order identifier to retrieve details for",
                    "displayName": "Order ID",
                    "displayType": "text",
                    "placeholder": "Enter PayPal order ID"
                },
                "name": "order_id"
            }
        ]
    },
    "parameters": [],
    "definition": {
        "url": "https://{{secrets.environment}}.paypal.com/v1/payments/payment",
        "method": "GET",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
