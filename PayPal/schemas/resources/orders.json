{
    "definition": {
        "url": "https://{{secrets.environment}}.paypal.com/v2/checkout/orders/{{parameters.order_id}}/capture",
        "method": "POST",
        "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    },
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "ID of the confirmed order to capture payment.",
                "displayName": "Order ID",
                "displayType": "text",
                "placeholder": "Enter approved order ID"
            },
            "name": "order_id"
        }
    ]
}
