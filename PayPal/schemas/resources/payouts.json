{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The payout item ID to retrieve",
                "displayName": "Payout Item ID",
                "displayType": "text",
                "placeholder": "Enter payout item ID"
            },
            "name": "payout_item_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment}}.paypal.com/v1/payments/payouts-item/{{parameters.payout_item_id}}",
        "method": "GET",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
