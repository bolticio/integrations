{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "The plan ID to retrieve",
                "displayName": "Plan ID",
                "displayType": "text",
                "placeholder": "Enter plan ID"
            },
            "name": "plan_id"
        }
    ],
    "definition": {
        "url": "https://{{secrets.environment}}.paypal.com/v1/billing/plans/{{parameters.plan_id}}",
        "method": "GET",
        "headers": {
            "Accept": "application/json",
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data}}"
            },
            "output": "{{response.data}}"
        }
    }
}
