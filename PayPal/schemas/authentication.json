{
    "parameters": [
        {
            "meta": {
                "value": "access_token",
                "options": [
                    {
                        "label": "Access Token",
                        "value": "access_token"
                    }
                ],
                "displayName": "Authentication Type",
                "displayType": "hidden"
            },
            "name": "type"
        }
    ],
    "access_token": {
        "token": {
            "url": "https://{{secrets.environment}}.paypal.com/v1/oauth2/token",
            "body": {
                "grant_type": "client_credentials"
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/x-www-form-urlencoded",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "refresh": {
            "url": "https://{{secrets.environment}}.paypal.com/v1/oauth2/token",
            "body": {
                "grant_type": "client_credentials"
            },
            "method": "post",
            "headers": {
                "Content-Type": "application/x-www-form-urlencoded",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "validate": {
            "url": "https://{{secrets.environment}}.paypal.com/v1/identity/oauth2/userinfo?schema=paypalv1.1",
            "method": "GET",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Client ID is required"
                        }
                    },
                    "description": "Your PayPal application Client ID",
                    "displayName": "Client ID",
                    "displayType": "text",
                    "placeholder": "Enter Client ID"
                },
                "name": "client_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Consumer secret is required"
                        }
                    },
                    "description": "Your PayPal application Consumer secret",
                    "displayName": "Consumer secret",
                    "displayType": "password",
                    "placeholder": "Enter Consumer secret"
                },
                "name": "client_secret"
            },
            {
                "meta": {
                    "options": [
                        {
                            "label": "Production",
                            "value": "api-m"
                        },
                        {
                            "label": "Sandbox",
                            "value": "api-m.sandbox"
                        }
                    ],
                    "validation": {
                        "required": true,
                        "requiredDetail": {
                            "errorMsg": "Environment type is required field."
                        }
                    },
                    "description": "Your PayPal application Environment",
                    "displayName": "Environment type",
                    "displayType": "select",
                    "placeholder": "Select Environment type"
                },
                "name": "environment"
            }
        ]
    }
}
