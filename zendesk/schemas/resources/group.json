    "getlist": {
        "definition": {
            "qs": {},
            "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/tickets",
            "method": "get",
            "headers": {
                "Authorization": "Basic convertBufferBase64String({{secrets.email}}:{{secrets.password}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data.tickets}}"
            },
            "pagination": {
                "qs": {
                    "page[size]": 10,
                    "page[after]": "{{response.data.meta.after_cursor}}"
                },
                "type": "cursor",
                "default": {
                    "page[size]": 10,
                    "page[after]": null
                },
                "condition": "{{response.data.meta.has_more}} !== false"
            }
        },
        "parameters": []
    },
    "update": {
        "definition": {
            "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/tickets/{{parameters.ticket_id}}",
            "body": {
                "ticket": {
                    "tags": "{{parameters.tags}}",
                    "comment": {
                        "body": "{{parameters.description}}"
                    },
                    "subject": "{{parameters.subject}}",
                    "group_id": "{{parameters.group_id}}",
                    "priority": "{{parameters.priority}}",
                    "assignee_id": "{{parameters.assignee_id}}"
                }
            },
            "method": "put",
            "filters": {
                "body": {
                    "allowEmptyArray": false,
                    "allowEmptyValue": false,
                    "allowEmptyObject": false
                }
            },
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.email}}:{{secrets.password}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "Enter the ID of the ticket you want to update",
                    "displayName": "Ticket ID",
                    "displayType": "text",
                    "placeholder": "Enter the ticket ID"
                },
                "name": "ticket_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "Enter the subject of the ticket you want to update.",
                    "displayName": "Subject",
                    "displayType": "text",
                    "placeholder": "Enter new ticket subject"
                },
                "name": "subject"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "Enter the description of the ticket you want to update.",
                    "displayName": "First Comment / Description",
                    "displayType": "textarea",
                    "placeholder": "Enter new ticket description"
                },
                "name": "description"
            },
            {
                "meta": {
                    "value": false,
                    "options": [
                        {
                            "label": "Urgent",
                            "value": "urgent"
                        },
                        {
                            "label": "High",
                            "value": "high"
                        },
                        {
                            "label": "Normal",
                            "value": "normal"
                        },
                        {
                            "label": "Low",
                            "value": "low"
                        }
                    ],
                    "description": "Select the priority of the ticket.",
                    "displayName": "Priority",
                    "displayType": "select",
                    "placeholder": "Select the priority for the ticket"
                },
                "name": "priority"
            },
            {
                "meta": {
                    "config": {
                        "url": "integrations/options",
                        "body": {
                            "name": "zendesk",
                            "secret": "{{parameters.secret}}",
                            "resource": "ticket",
                            "operation": "ticket.update",
                            "loadOptionsMethod": "getAssignees"
                        },
                        "method": "post",
                        "urlType": "options",
                        "labelKey": "name",
                        "valueKey": "id"
                    },
                    "options": [],
                    "description": "Note: the assignee must be in the default group (or specific group selected below) else an error will occur. Defaults to selected zendesk account",
                    "displayName": "Assignee",
                    "displayType": "select",
                    "placeholder": "Select the assignee (agent)"
                },
                "name": "assignee_id"
            },
            {
                "meta": {
                    "config": {
                        "url": "integrations/options",
                        "body": {
                            "name": "zendesk",
                            "secret": "{{parameters.secret}}",
                            "resource": "ticket",
                            "operation": "ticket.update",
                            "loadOptionsMethod": "getGroups"
                        },
                        "method": "post",
                        "urlType": "options",
                        "labelKey": "name",
                        "valueKey": "id"
                    },
                    "options": [],
                    "description": "Select the group you want to assign the ticket to.",
                    "displayName": "Group",
                    "displayType": "select",
                    "placeholder": "Select the group"
                },
                "name": "group_id"
            },
            {
                "meta": {
                    "value": [],
                    "description": "Enter the tags for the ticket.",
                    "displayName": "Tags",
                    "displayType": "multitext"
                },
                "name": "tags"
            }
        ]
    },
