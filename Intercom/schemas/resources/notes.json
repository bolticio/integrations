{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Contact ID is required"
                    }
                },
                "description": "Enter the Contact ID for the notes to be created.",
                "displayName": "Contact ID",
                "displayType": "text",
                "placeholder": "Enter the Contact ID"
            },
            "name": "id"
        },
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Notes are required"
                    }
                },
                "description": "Enter your notes description.",
                "displayName": "Notes",
                "displayType": "text",
                "placeholder": "Enter your notes description."
            },
            "name": "body"
        }
    ],
    "definition": {
        "url": "https://api.intercom.io/contacts/{{parameters.id}}/notes",
        "body": {
            "body": "{{parameters.body}}",
            "name": "{{parameters.name}}"
        },
        "method": "post",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}",
            "Intercom-Version": "2.14"
        },
        "response": {
            "error": {
                "code": "{{response.data.errors[0].code}}",
                "message": "{{response.data.errors[0].message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
