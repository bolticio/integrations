{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true,
                    "requiredDetail": {
                        "errorMsg": "Company ID is required"
                    }
                },
                "description": "Enter the ID of the company given by the Intercom you want to delete.",
                "displayName": "Company ID",
                "displayType": "text",
                "placeholder": "Enter the Company ID"
            },
            "name": "id"
        }
    ],
    "definition": {
        "url": "https://api.intercom.io/companies/{{parameters.id}}",
        "method": "delete",
        "headers": {
            "Accept": "application/json",
            "Content-Type": "application/json",
            "Authorization": "Bearer {{secrets.api_key}}",
            "Intercom-Version": "2.14"
        },
        "response": {
            "error": {
                "code": "{{response.data.errors[0].code}}",
                "message": "{{response.data.errors[0].message}}"
            },
            "output": "{{response.data.deleted}}"
        }
    }
}
