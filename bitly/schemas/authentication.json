{
    "parameters": [
        {
            "meta": {
                "options": [
                    {
                        "label": "Personal Access Token",
                        "value": "access_token"
                    }
                ],
                "validation": {
                    "required": true
                },
                "description": "Choose the type of authentication you want to use.",
                "displayName": "Authentication Type",
                "displayType": "select",
                "placeholder": "Select an authentication type"
            },
            "name": "type"
        }
    ],
    "access_token": {
        "validate": {
            "url": "https://api-ssl.bitly.com/v4/groups",
            "method": "get",
            "headers": {
                "Authorization": "Bearer {{secrets.access_token}}"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.errors[0].message}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "The username associated with your Bitly account.",
                    "displayName": "Access Token",
                    "displayType": "password",
                    "placeholder": "Your Bitly Access Token"
                },
                "name": "access_token"
            }
        ]
    }
}
