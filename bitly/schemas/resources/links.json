{
    "parameters": [
        {
            "meta": {
                "validation": {
                    "required": true
                },
                "description": "Enter the bitlink you want to find",
                "displayName": "Link",
                "displayType": "text",
                "placeholder": "Enter the Link (e.g. bit.ly/3W6ay2N )"
            },
            "name": "link"
        }
    ],
    "definition": {
        "url": "https://api-ssl.bitly.com/v4/bitlinks/{{parameters.link}}",
        "method": "get",
        "headers": {
            "Authorization": "Bearer {{secrets.access_token}}"
        },
        "response": {
            "error": {
                "code": "{{response.status}}",
                "message": "{{response.data.message}}"
            },
            "output": "{{response.data}}"
        }
    }
}
