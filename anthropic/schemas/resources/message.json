    "content": {
        "definition": {
            "url": "https://api.anthropic.com/v1/messages",
            "body": {
                "model": "{{parameters.model}}",
                "system": "{{parameters.system}}",
                "messages": "{{parameters.messages}}",
                "max_tokens": "{{parameters.max_tokens}}",
                "temperature": "{{parameters.temperature}}"
            },
            "method": "post",
            "filters": {
                "body": {
                    "allowStringToNumberConversion": true
                }
            },
            "headers": {
                "x-api-key": "{{secrets.api_token}}",
                "content-type": "application/json",
                "anthropic-version": "2023-06-01"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error.message}}"
                },
                "output": "{{response.data}}"
            },
            "transform": {
                "body": "let updatedBody = { ...body }; for (let [key, value] of Object.entries(updatedBody)) { if (key == 'max_tokens') { updatedBody[key] = parseInt(value); } if (key == 'temperature') { updatedBody[key] = parseFloat(value); } if (key == 'system') { updatedBody[key] = value.replace(/[^A-Za-z0-9\\s]/g, ''); } } return updatedBody;"
            }
        },
